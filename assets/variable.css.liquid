

:root {
    --black: #000000;
    --white:#ffffff;
    --gray: #ececec;
    --dark-gray: #7b7b7b;
    --theme-color: #000;
    --green:#6cad61;
    --red:#ec7c7c;
    --font-family:'Jost', sans-serif;
    --extra-small:12px;
    --small-text: 13px;
    --reg-text: 14px;
    --med-text: 16px;
    --large-text: 18px;
    --thin:100;
	--light:300;
	--normal:400;
	--medium:500;
	--semibold:600;
  	--bold:700;
  	--extrabold:900;    

}

     {% comment %}
      h1,h2,h3,h4,h5,h6{

        font-family: {{ settings.type_header_font_family.family }},{{ settings.type_header_font_family.fallback_families }};
        font-weight: {{ settings.type_header_font_family.weight }};
        letter-spacing: {{ settings.type_header_spacing | default: "25" | divided_by: 1000.00 }}em;
        line-height:  {{ settings.type_header_line_height | default: 1.4 }};
      }
      
   
      /*================ Color variables ================*/

/* Button colors */
--colorBtnPrimary: {{ settings.color_button | default: '#000' }};
--colorBtnPrimaryText: {{ settings.color_button_text | default: '#fff' }};
/* Text colors */
--colorTextBody: {{ settings.color_body_text | default: '#1c1d1d' }};
--colorPrice: {{ settings.color_price | default: '#1c1d1d' }};
--colorTextSavings: {{ settings.color_savings_text | default: '#1c1d1d' }};
/* Backgrounds */
--colorBody: {{ settings.color_body_bg | default: '#fff' }};
--colorInputBg: {{ settings.color_body_bg | default: '#1c1d1d' }};
/* Border colors */
--colorBorder: {{ settings.color_borders | default: '#1c1d1d' }};
/* Modal */

--colorModalBg: {{ settings.color_modal_overlays | default: '#000' }};

--colorModalText: #fff;

/* Image overlays */

--colorImageOverlay: {{ settings.color_image_overlay | default: '#000' }};

--colorImageOverlayOpacity: {{ settings.color_image_overlay_opacity | divided_by: 100.0 }};

--colorImageOverlayTextShadow: {{ settings.color_image_overlay_text_shadow | divided_by: 100.0 }};

--colorSmallImageBg: {{ settings.color_small_image_bg | default: '#eee' }};

--colorLargeImageBg: {{ settings.color_large_image_bg | default: '#1c1d1d' }};

--colorGridOverlay: {{ settings.collection_grid_tint | default: '#000' }};

--colorGridOverlayOpacity: {{ settings.collection_grid_opacity | divided_by: 100.0 }};

/* Button style */

--buttonStyle: {{ settings.button_style | default: 'square' }};

--buttonSkew: 12;


/*================ Typography ================*/

/* Font-face header styles */

--type_header_family: {{ settings.type_header_font_family.family }};

--type_header_fallback: {{ settings.type_header_font_family.fallback_families }};

--type_header_stack: #{"'" + --type_header_family + "', " + --type_header_fallback};

--type_header_weight: {{ settings.type_header_font_family.weight }};

/* Non font-face header styles */

--type_header_line_height: {{ settings.type_header_line_height | default: 1.4 }};

--type_header_text_center: {{ settings.type_headers_align_text | default: false }};

--type_header_base_size: {{ settings.type_header_base_size | default: 32 }}px;

--type_header_spacing: {{ settings.type_header_spacing | default: "25" | divided_by: 1000.00 }}em;

--type_header_capitalize: {{ settings.type_header_capitalize | default: false }};

/* Font-face base styles */

--type_base_family: {{ settings.type_base_font_family.family }};

--type_base_fallback: {{ settings.type_base_font_family.fallback_families }};

--type_base_stack: #{"'" + --type_base_family + "', " + --type_base_fallback};

--type_base_weight: {{ settings.type_base_font_family.weight }};

/* Non font-face base styles */

--type_body_text_center: {{ settings.type_body_align_text | default: false }};

--type_base_spacing: {{ settings.type_base_spacing | default: "50" | divided_by: 1000.00 }}em;

--type_base_line_height: {{ settings.type_base_line_height | default: 1.4 }};

--type_base_size: {{ settings.type_base_size | default: 16 }}px;

--icon_weight: {{ settings.icon_weight | default: '5px' }};

--icon_linecaps: {{ settings.icon_linecaps | default: 'miter' }};

      {% endcomment %}