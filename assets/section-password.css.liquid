.template-password{
  background-image: url( {{ 'password-bg.jpg' | asset_url }});
  height: 100%;
  background-repeat: no-repeat;
  background-size: cover;
  @include pos(relative, null);
  background-position:center;
  padding: 0px;
  ul.form-success li {
    color: $white-color;
    text-align: $text-center;
    padding: 10px 0px;
  }
  header{
    text-align: $text-center;
    @include pos(absolute, -60px, 0px, null, 0px);
    margin: 0px auto;
    @media(max-width:767px){
      top: -50px;
    }
    img.shop-logo {
      max-width: 80px;
    }
    h1 {
      color: $white-color;
      @include font-size(14);
      @include pos(absolute, -40px, null, null, 0px);
      text-align: $text-center;
      width: 100%;    
    }
  }
  .layer-bg{
    background-color:rgba(0,0,0,.4);
    @include pos(fixed, null, null, null, 0px);
    @include square(100%);
    z-index: -1;
  }
  a.login-block{
    border: 2px solid $theme-color;
    color: $theme-color;
    padding:7px 11px;
    @include pos(fixed, 30px, 30px, null, null);
    text-transform: $capitalize;
    @include font-size(13);
    @media(max-width:992px){
      @include font-size(10);
      top: 10px;
      right: 10px;
    }  
    @media(max-width:480px){
      border: 2px solid $white-color;
      color: $white-color;
      @include pos(absolute, 20px, 0, null, 0);
      margin: 0px auto;
      max-width: 160px;
      text-align: $text-center;
    }
    svg{
      margin: 0px 5px 0px 0px;
      @include square(10px);
      fill: $theme-color;
      @media(max-width:480px){
      fill: $white-color;
      }
    }
  }
  #MainContent{
    &.tp-content{
      height: 100%;
      @media(max-width:992px){
        padding: 40px 50px;
        max-width: 100%;
      }
      @media(max-width:480px){
        max-width: 100%;
        padding: 30px 10px 20px;
      }
      .passwordInnerArea{    	
        @include prefix(transform, translate(-50%,-50%));
        background:$white-color;
        border: 2px solid rgba(255,255,255,.1);
        @include pos(absolute, 50%, null, null, 50%);
        max-width: 510px;
        width: 100%;
        padding: 30px;
        @media(max-width:992px){
          max-width: 500px;
          padding: 30px 30px;
        }
        @media(max-width:767px){
          max-width: 430px;
          padding:30px 40px;
          border: 0px solid rgba(255,255,255,.1);
          top: 52%;
        }
        @media(max-width:667px){
          top: 57%;
        }
        @media(max-width:480px){
          padding: 25px 35px;
          max-width: 95%;
          transform: initial;
          @include pos(relative, 50%, null, null, 0);
          margin: 210px auto 0;   
        }
        @media(max-width:375px){
          margin: 180px auto 0;
        }
        @media(max-width:320px){
          margin: 150px auto 0;
        }
      }
      h2{
        text-align: $text-center;
        max-width: 100%;
        margin: 0px auto;
        padding: 0px;
        color: $theme-color;
        text-transform: $uppercase;
        font-weight: $font-weight600;
        @include font-size(25);
        @media(max-width:992px){
          @include font-size(30);
        }
        @media (max-width:767px){   
          @include font-size(23);
        }
        @media(max-width:667px){
          @include font-size(19);
        }
      }
      h4 {
        text-align: center;
        margin:0 auto 10px;
        padding: 10px 0px;
        color: $theme-content-color;
        text-transform: initial;
        font-weight: 500;
        font-size: 15px;
        @media(max-width:992px){
          @include font-size(14);
          margin: 10px auto;
          padding: 10px 0px 0px;
        }
        @media(max-width:767px){
          @include font-size(13);
          margin: 16px auto;
          padding: 0px;
        }
        @media(max-width:667px){
          @include font-size(10);
          margin: 10px auto;
        }
        @media(max-width:480px){
          @include font-size(10);
          margin: 10px auto;
          padding: 20px 0px 0px;
        }
      }
      .form-group{
        @include pos(relative, null);
        padding-right:130px;
        @media(max-width:767px){
          padding-right:80px;
        }
        @media(max-width:480px){
          padding:0px ;
        }
        input{
          @media(max-width:480px){  
            margin-bottom: 10px;
          }
        }
        button{
          @include pos(absolute, 0, 0, null, null);
          width: 130px;
          height: 50px;
          border: none;
          background: $theme_color;
          @include font-size(16);
          font-weight: $font-weight500;
          color: $white-color;
          text-transform: $uppercase; 
          @media(max-width:1024px){
            height:40px;
            @include font-size(14);
          }     
          @media(max-width:767px){
            width: 80px;
            height:35px;
          }
          @media(max-width:480px){
            width: 100%;
            @include pos(static, null);
          }
        }
      }
      ul.share-icons {
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 10px 0px 0px;
        @media(max-width:992px){
          padding: 10px 0px 0px;
        } 
        @media (min-width:481px)  and (max-width:767px){   
          padding: 0px ;
        }
        @media  (max-width:480px){   
          padding: 0px 0px 5px;
        }
        li{
          margin:0px 5px;
          a{
            display: block;
            width: 30px;
            height: 30px;
            background: #000;
            border: 1px solid transparent;
            border-radius: 50%;
            text-align: center;
            line-height: 27px;
            color: #fff;
            font-size: 0px;
            @media(max-width:767px){
              @include square(30px);
              line-height: 26px;
            } 
            &:hover, &:focus{
              @include prefix(transition, (all .3s linear));   	
            }
            svg{
              fill: $white-color;   
              width:14px;
              height:auto;
            }
          }
        }
      }
    }
  }
  .password-footer{
    padding: 0px;
    background-color: transparent;
    margin-top: 0px;
    @include pos(absolute, null, null, 0px, null);
    text-align: $text-center;
    color: $theme-color;
    @include font-size(13);
    padding-bottom: 10px;
    @media(max-width:767px){
      background-color: transparent !important;
      border-top: 0px solid #f3f3f3;
    }
    @media(max-width:480px){
      @include font-size(11);
    }
    a{
      color: $theme_color;
      svg{
        display:none;
      }
    }
  }
  div#password-popup {
    display:none;
    background:$white-color;
    @include pos(fixed, 0, null, null, null);
    @include square(100%);
    .cross {
      @include pos(absolute, 25px, 25px, null, null);
      background-color:$theme-color;
      text-align:$text-center;
      opacity:1;   
      cursor: pointer;
      @include square(40px);
      line-height:35px;
      @media(max-width:767px){
        right:0;
        top: 0;
      }
      svg{
        fill:$white-color;
        cursor: pointer;
        width: 13px;
        height: auto;
        @media(max-width:767px){
          @include square(13px);
        }
      }
    }
    .one-page-password{
     @include prefix(transform, translate(-50%,-50%));
      max-width: 500px;
      width: 100%;
      @include pos(absolute, 50%, null, null, 50%);
      padding:70px 40px;
      background: $white-color;
      @media(max-width:767px){
        padding: 30px 40px;
        max-width: 400px;
      }
      @media(max-width:480px){
        max-width: 90%;
        padding: 30px;
      }
      @media(max-width:375px){
        max-width: 85%;
      }
      h4{      	
        text-align: $text-center;
        color: $theme-heading-color;
        text-transform: $capitalize;
        font-weight: $font-weight600;
        @include font-size(19);   
        @media(max-width:767px){
          @include font-size(14);
        }
        @media(max-width:480px){
          @include font-size(12);
        }
      }
      p{      	
        text-align: $text-center;
        color: $theme-content-color;
        font-weight: $font-weight500;
        @include font-size(13);
        @media(max-width:480px){
          @include font-size(11);
        }
        a{
          color: $theme_color;
        }
      }
      form{
        @include pos(relative, null);
        padding-right:80px;
        margin: 25px 0px;

        @media(max-width:767px){
          margin: 20px 0px;
        }
        @media(max-width:480px){
          padding-right:0px;
        }
        input{
          width: 100%;
          padding: 0px 15px;
          background: #eee;
          height: 45px;
          border: none;
          @include font-size(14);  
          border-radius: 0px;
          -webkit-border-radius: 0px;  
          @media(max-width:767px){
            height:35px;
          }       
        }
        button{
          @include pos(absolute, 0px, 0px, null, null);
          width: 100px;
          height: 45px;
          border: none;
          background: $theme_color;
          @include font-size(14);
          font-weight: $font-weight500;
          color: $white-color;
          text-transform: $uppercase;

          @media(max-width:767px){
            height: 35px;
          }
          @media(max-width:480px){
            width: 100%;
            @include pos(static, null);
            margin: 10px 0px 0px 0px;
          }
        }
        .errors {
          ul{
            li{
              @include font-size(12);
              list-style: none;
              text-align: $text-center;
              color: $error-color;
              padding-bottom: 5px;
              @include pos(absolute, null, null, -25px, null);
              font-weight: $font-weight500;
            }
          }
        }
      }
    }
  }
}