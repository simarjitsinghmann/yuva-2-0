               },
               {
                  "type": "richtext",
                  "id": "content",
                  "label": "t:sections.product-template.blocks.content.settings.content.label"
               },
               {
                  "type": "checkbox",
                  "id": "show_reviews",
                  "label": "t:sections.product-template.blocks.content.settings.show_reviews.label",
                  "default":true
               }

            ]            
        }
    ]
