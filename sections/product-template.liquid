{% form 'contact', class: 'product-query__form contact__form' %}
{%- assign success_msg = 'contact.form.post_success' | t -%}
{% render 'form-status', form: form, form_id: 'product-query', success_message: success_msg %}
<input type="text" name="contact[Subject]" value="Product Query" readonly class="hidden no-js"/>
<h2 class="ff-heading">More information about this artwork?</h2>
<br/>
<label for="contact-ContactFormName" class="visually-hidden">{{ 'contact.form.name' | t }}</label>
<input
       type="text"
       name="contact[name]"
       id="contact-ContactFormName"
       class="input"
       placeholder="{{ 'contact.form.name' | t }}"
       value="{% if form[name] %}{{ form[name] }}{% elsif customer %}{{ customer.name }}{% endif %}"
       required
       />

<label for="contact-ContactFormEmail" class="visually-hidden">{{ 'contact.form.email' | t }}</label>
<input
       type="email"
       name="contact[email]"
       id="contact-ContactFormEmail"
       class="input"
       placeholder="{{ 'contact.form.email' | t }}"
       value="{% if form.email %}{{ form.email }}{% elsif customer %}{{ customer.email }}{% endif %}"
       spellcheck="false"
       autocomplete="off"
       autocapitalize="off" 
       required
       >

<label for="contact-ContactFormPhone" class="visually-hidden">{{ 'contact.form.phone' | t }}</label>
<input
       type="tel"
       name="contact[phone]"
       id="contact-ContactFormPhone"
       class="input-reset input w-100"
       placeholder="{{ 'contact.form.phone' | t }}"
       value="{% if form[phone] %}{{ form.phone }}{% elsif customer %}{{ customer.phone }}{% endif %}"
       pattern="[0-9\-]*"
       required
       >

<label for="contact-ContactFormProduct" class="visually-hidden">Product</label>
<input
       type="tel"
       name="contact[product]"
       id="contact-ContactFormProduct"
       class="input-reset input w-100"
       placeholder="Product"
       value="Artwork: {{product.title}}"
       pattern="[0-9\-]*" readonly
       >

<label for="contact-ContactFormMessage" class="visually-hidden">{{ 'contact.form.message' | t }}</label>
<textarea
          rows="5"
          name="contact[Message]"
          id="contact-ContactFormMessage"
          class="input-reset input w-100"
          placeholder="{{ 'contact.form.message' | t }}"
          required
          >
  {%- if form.body -%}
  {{- form.body -}}
  {%- endif -%}
</textarea>

<button type="submit" class="btn btn--primary btn--form">Send</button>

