{% schema %}
{
    "name": "t:sections.product-template.name",
    "tag": "section",
    "class": "product-section single__product",
    "settings": [
         {
         "type": "select",
         "id": "gallery_style",
         "label": "t:sections.product-template.settings.gallery_style.label",
         "default":"gallery",
         "options": [
            {
               "value": "gallery",
