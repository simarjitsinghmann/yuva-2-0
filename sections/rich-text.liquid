<div class="section-spacer">
  <div class="container">
    {% for block in section.blocks %}
    <div class="text-content text__{{section.settings.content_alignment}}"  {{ block.shopify_attributes }}>
      <h2 class="content-heading">{{block.settings.heading}}</h2>
      <div class="rich-text-description">
        {%-case block.type -%}
        {% when 'richtext' %}
        {{block.settings.content}}
        {% when 'page' %}
        {% if block.settings.page != blank %}
        {{block.settings.page.content}}
        {% else %}
        {{'onboarding.rich_text_page' | t}}
        {% endif %}
        {%- endcase -%}
      </div>
    </div>
    {% endfor %}
  </div>
</div>
<style>
  #shopify-section-{{section.id}}.shopify-section {
    background-color:{{section.settings.bgcolor}};
    padding-top:{{section.settings.top_space_desktop}}px;
    padding-bottom:{{section.settings.bottom_space_desktop}}px;
  }
  @media only screen and (max-width:575px) {
    #shopify-section-{{section.id}}.shopify-section{
      padding-top:{{section.settings.top_space_mobile}}px;
      padding-bottom:{{section.settings.bottom_space_mobile}}px;
    }
  }
</style>
{% schema %}
  {
    "name": "t:sections.rich-text.name",
    "tag": "section",
    "class":"rich-text-section",
    "settings": [
      {
        "type": "color",
        "id": "bgcolor",
        "label": "t:sections.rich-text.settings.bgcolor.label",
        "default":"#ffffff"
      },
      {
        "type": "select",
        "id": "content_alignment",
        "label": "t:sections.rich-text.settings.content_alignment.label",
        "default": "center",
        "options": [
          {
            "label": "t:sections.rich-text.settings.content_alignment.options.left.label",
            "value": "left"
          },
          {
            "label": "t:sections.rich-text.settings.content_alignment.options.center.label",
            "value": "center"
          },
          {
            "label": "t:sections.rich-text.settings.content_alignment.options.right.label",
            "value": "right"
          }
        ]
      },
      {
        "type": "range",
        "id": "top_space_desktop",
        "label": "t:sections.rich-text.settings.top_space_desktop.label",
        "default":30,
        "min":0,
        "max":60,
        "step":5
      },
      {
        "type": "range",
        "id": "bottom_space_desktop",
        "label": "t:sections.rich-text.settings.bottom_space_desktop.label",
        "default":30,
        "min":0,
        "max":60,
        "step":5
      },
      {
        "type": "range",
        "id": "top_space_mobile",
        "label": "t:sections.rich-text.settings.top_space_mobile.label",
        "default":30,
        "min":0,
        "max":60,
        "step":5
      },
      {
        "type": "range",
        "id": "bottom_space_mobile",
        "label": "t:sections.rich-text.settings.bottom_space_mobile.label",
        "default":30,
        "min":0,
        "max":60,
        "step":5
      }
    ],
	"blocks":[
          {
          "type":"richtext",
          "name":"t:sections.rich-text.blocks.richtext.name",
          "settings": [
              {
                  "type":"text",
                  "id":"heading",
                  "label":"t:sections.rich-text.blocks.richtext.settings.heading.label",
                  "default":"Rich text"
              },
              {
                  "type":"richtext",
                  "id":"content",
                  "label":"t:sections.rich-text.blocks.richtext.settings.content.label",
				  "default":"<p>Use this section to welcome customers to your store, say a bit about your brand, or share news and seasonal promotions.</p>"
              }
          ]
		},
		{
          "type":"page",
          "name":"t:sections.rich-text.blocks.page.name",
          "settings": [
              {
                  "type":"text",
                  "id":"heading",
                  "label":"t:sections.rich-text.blocks.page.settings.heading.label",
                  "default":"Page Content"
              },
              {
                  "type":"page",
                  "id":"page",
                  "label":"t:sections.rich-text.blocks.page.settings.page.label"
              }
          ]
		}
	],
    "presets": [
      {
        "name": "t:sections.rich-text.presets.name",
        "category":"text",
        "blocks": [
          {
            "type": "richtext"
          }
        ]
      }
    ]
  }
{% endschema %}

