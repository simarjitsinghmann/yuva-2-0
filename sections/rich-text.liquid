<div class="section-spacer">
  <div class="container">
    {% for block in section.blocks %}
    <div class="right-text-content"  {{ block.shopify_attributes }}>
      <h3>{{block.settings.heading}}</h3>
      <div class="rich-text-description">
        {%-case block.type -%}
        {% when 'richtext' %}
        {{block.settings.content}}
        {% when 'page' %}
        {{block.settings.page.content}}
        {%- endcase -%}
      </div>
    </div>
    {% endfor %}
  </div>
</div>
{% schema %}
  {
    "name": "t:sections.rich-text.name",
    "tag": "section",
    "class":"rich-text-section",
	"blocks":[
          {
          "type":"richtext",
          "name":"t:sections.rich-text.blocks.richtext.name",
          "settings": [
              {
                  "type":"text",
                  "id":"heading",
                  "label":"t:sections.rich-text.blocks.richtext.settings.heading.label",
                  "default":"Rich text"
              },
              {
                  "type":"richtext",
                  "id":"content",
                  "label":"t:sections.rich-text.blocks.richtext.settings.content.label",
				  "default":"<p>Use this section to welcome customers to your store, say a bit about your brand, or share news and seasonal promotions.</p>"
              },
            {
              "type": "range",
              "id": "top_space",
              "label": "t:sections.rich-text.settings.top_space.label",
              "default":30,
              "min":0,
              "max":60,
              "step":5
            },
            {
              "type": "range",
              "id": "bottom_space",
              "label": "t:sections.rich-text.settings.bottom_space.label",
              "default":30,
              "min":0,
              "max":60,
              "step":5
            }
          ]
		},
          {
          "type":"page",
          "name":"t:sections.rich-text.blocks.page.name",
          "settings": [
              {
                  "type":"text",
                  "id":"heading",
                  "label":"t:sections.rich-text.blocks.page.settings.heading.label",
                  "default":"Page Content"
              },
              {
                  "type":"page",
                  "id":"page",
                  "label":"t:sections.rich-text.blocks.page.settings.page.label"
              }
          ]
		}
	],
    "presets": [
      {
        "name": "t:sections.rich-text.presets.name",
        "category":"text",
        "blocks": [
          {
            "type": "richtext"
          }
        ]
      }
    ]
  }
{% endschema %}

