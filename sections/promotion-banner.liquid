<div class="type-banner__content text-center">
  <div class="type-banner__text">
    <h3>Banner promotion</h3>
    <p >Add the details of your promotion in smaller text</p>
    <p class="btn">Shop now</p>
  </div>
</div>
{% schema %}
{
   "name":"Promotion Banner",
   "settings":[
      {
         "type":"text",
         "id":"heading",
         "label":"Heading",
         "default":"Promotion"
      },
      {
         "type":"text",
         "id":"text",
         "label":"Text",
         "default":"Add the details of your promotion"
      },
      {
         "type":"url",
         "id":"link",
         "label":"Button Link"
      },
      {
         "type":"text",
         "id":"label",
         "label":"Button Label",
         "default":"Shop now"
      },
      {
         "type":"color",
         "id":"bgcolor",
         "label":"Background Color",
         "default":"#000"
      },
      {
         "type":"range",
         "id":"bgcolor_opacity",
         "label":"Opacity",
         "default":8,
         "min":0,
         "max":20,
         "step":2,
         "unit":"%"
      }
   ]
}
{% endschema %}

