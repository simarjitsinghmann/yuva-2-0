<div class="promo-grid__container ">
  <div class="type-banner__content text-center">
    <div class="type-banner__text">
      {% if section.settings.heading != blank %}
      <p class="h3">{{ section.settings.heading }}</p>
      {% endif %}
      {% if section.settings.text != blank %}
      <p>{{ section.settings.text }}</p>
      {% endif %}
      {% if section.settings.label != blank and section.settings.link != blank %}
      <a href="{{ section.settings.link }}" class="type-banner__link">{{ section.settings.label }}
      </a>
      {% endif %}
    </div>
  </div>
</div>
{% schema %}
{
   "name":"Promotion Banner",
   "class":"promotion-banner",
   "settings":[
      {
         "type":"text",
         "id":"heading",
         "label":"Heading",
         "default":"Promotion"
      },
      {
         "type":"text",
         "id":"text",
         "label":"Text",
         "default":"Add the details of your promotion"
      },
      {
         "type":"url",
         "id":"link",
         "label":"Button Link"
      },
      {
         "type":"text",
         "id":"label",
         "label":"Button Label",
         "default":"Shop now"
      },
      {
         "type":"color",
         "id":"bgcolor",
         "label":"Background Color",
         "default":"#000"
      },
      {
         "type":"range",
         "id":"bgcolor_opacity",
         "label":"Opacity",
         "default":8,
         "min":0,
         "max":20,
         "step":2,
         "unit":"%"
      }
   ]
}
{% endschema %}

