<div id="promo-banner-{{section.id}}" class="promo-grid__container {% unless section.settings.full_width %}container{% endunless %}">
  <div class="type-banner__content text-center">
    <div class="type-banner__text d-flex">
      {% if section.settings.heading != blank %}
      <h3>{{ section.settings.heading }}</h3>
      {% endif %}
      {% if section.settings.text != blank %}
      <p>{{ section.settings.text }}</p>
      {% endif %}
      {% if section.settings.label != blank and section.settings.link != blank %}
      <a href="{{ section.settings.link }}" class="type-banner__link">{{ section.settings.label }}
      </a>
      {% endif %}
    </div>
  </div>
</div>
<style>
  #promo-banner-{{section.id}}{
    background-color:{{section.settings.bgcolor}};
  }
    #shopify-section-{{section.id}}.shopify-section {
    padding-top:{{section.settings.top_space_desktop}}px;
    padding-bottom:{{section.settings.bottom_space_desktop}}px;
  }
  @media only screen and (max-width:575px) {
    #shopify-section-{{section.id}}.shopify-section{
      padding-top:{{section.settings.top_space_mobile}}px;
      padding-bottom:{{section.settings.bottom_space_mobile}}px;
    }
  }
</style>
{% schema %}
{
   "name":"Promotion Banner",
   "class":"promotion-banner",
   "settings":[
      {
        "type": "checkbox",
        "id": "full_width",
        "label": "Full width",
        "default": false
      },
      {
         "type":"text",
         "id":"heading",
         "label":"Heading",
         "default":"Promotion"
      },
      {
         "type":"text",
         "id":"text",
         "label":"Text",
         "default":"Add the details of your promotion"
      },
      {
         "type":"url",
         "id":"link",
         "label":"Button Link"
      },
      {
         "type":"text",
         "id":"label",
         "label":"Button Label",
         "default":"Shop now"
      },
      {
         "type":"color",
         "id":"bgcolor",
         "label":"Background Color",
         "default":"#000"
      },
      {
         "type":"range",
         "id":"bgcolor_opacity",
         "label":"Opacity",
         "default":8,
         "min":0,
         "max":20,
         "step":2,
         "unit":"%"
      },
      {
        "type": "range",
        "id": "top_space_desktop",
        "label": "t:sections.rich-text.settings.top_space_desktop.label",
        "default":30,
        "min":0,
        "max":60,
        "step":5
      },
      {
        "type": "range",
        "id": "bottom_space_desktop",
        "label": "t:sections.rich-text.settings.bottom_space_desktop.label",
        "default":30,
        "min":0,
        "max":60,
        "step":5
      },
      {
        "type": "range",
        "id": "top_space_mobile",
        "label": "t:sections.rich-text.settings.top_space_mobile.label",
        "default":30,
        "min":0,
        "max":60,
        "step":5
      },
      {
        "type": "range",
        "id": "bottom_space_mobile",
        "label": "t:sections.rich-text.settings.bottom_space_mobile.label",
        "default":30,
        "min":0,
        "max":60,
        "step":5
      }
   ]
}
{% endschema %}

