<style>   
{% if section.settings.title_color!= blank %}
    .insta-feed .container h2 {
      color: {{ section.settings.title_color }};
    }
{% endif %}
{% if section.settings.subheading_color!= blank %}
    .insta-feed .container h5 {
      color: {{ section.settings.subheading_color }};
    }
{% endif %}
</style>
{% schema %}
  {
    "name": "t:sections.instagram.name",
    "tag": "section",
    "class":"instagram-post",
    "settings": [
      {
        "type": "text",
        "id": "section_title",
        "label": "Heading",
        "default": "Insta Feed"
      },
      {
        "type": "color",
        "id": "title_color",
        "label": "Heading Color",
		"default": "#405352"
      },
      {
        "type": "html",
        "id": "subheading",
        "label": "Description",
        "default": "<p>Follow us on <a href=\"https:\/\/www.instagram.com\/shinedezigntheme\/\" title=\"#\">Shinedezigntheme\n<\/a><\/p>"
      },
      {
        "type": "color",
        "id": "subheading_color",
        "label": "Description Color",
        "default": "#405352"
      },
       {
        "type": "text",
        "id": "insta_user_id",
        "label": "Add Insagram User Id"
      },
      {
        "type": "text",
        "id": "insta_access_Token",
        "label": "Access Token"
      }
    
    ],
    "presets": [
    	{
          "name": "t:sections.instagram.presets.name",
          "category": "Promotional"
        }
    ]
  }
{% endschema %}