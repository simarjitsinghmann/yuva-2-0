<div class="container">
  <div class="inner-container">
    <h2 class="content-heading text-center">{{section.settings.heading}}</h2>
    <div class="row">
      {% for block in section.blocks %}
      <div class="col-12 col-sm-6 col-md-4">
        <div class="about-feature-box">
          <div class="feature-icon"><i class="fas fa-{{block.settings.icon}}"></i></div>
          <h5>{{block.settings.heading}}</h5>
          <p>{{block.settings.content}}</p>
        </div>
      </div>
      {% endfor %}
    </div>
  </div>
</div>
{% schema %}
  {
    "name": "Featured Content",
    "tag": "section",
    "class":"about-best-choice",
    "max_blocks":3,
    "settings": [
        {
            "type":"text",
            "id":"heading",
            "label":"Heading",
            "default":"Why We Are Your Best Choice"
        }
  	],
	"blocks":[
		{
          "type": "featured-content",
          "name":"Feature",
          "settings": [
              {
                  "type":"text",
                  "id":"heading",
                  "label":"Heading",
                  "default":"Feature Title"
              },
              {
                  "type":"textarea",
                  "id":"content",
                  "label":"Content"
              },
              {
                  "type":"select",
                  "id":"icon",
                  "label":"Icon",
				  "options":[
					{
						"label":"Shipping",
						"value":"truck"
					},
					{
						"label":"Return",
						"value":"sync-alt"
					},
					{
						"label":"Payment",
						"value":"credit-card"
					}
				]
              }
          ]
		}
	],
    "presets": [
      {
        "name": "Featured Content"
      }
    ]
  }
{% endschema %}

