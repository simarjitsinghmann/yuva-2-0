<div class="section-spacer">
  <div id="section-{{section.id}}" class="colllection-list-view">
    <div class="container">
      <div class="collection-section-header section-heading-box">                  
        {% if section.settings.heading != blank %}
        <h2 class="title">{{section.settings.heading}}</h2>
        {% endif %}
      </div>
      <div class="" id="collectionSlider-{{section.id}}">
        <div class="row">
          <div class="col-sm-12 col-md-6">
          {% for block in section.blocks %}
          {% if forloop.first %}
          {% if block.settings.collection != blank %}
          {% assign collection = block.settings.collection %}
            <div class="collection-list-view-wrapper" id="block-{{block.id}}"  {{ block.shopify_attributes }}>
              <div class="collection-list-view-card" >
                {% if block.settings.image != blank %}
                <img src="{{ block.settings.image | img_url:'master'}}" />
                {% else %}
                <img src="{{ collection.featured_image | img_url:'master'}}" />
                {% endif %}

                <div class="list-view-content text__{{block.settings.info_position}}">          
                  {% if block.settings.heading != blank %}
                  <h2>{{block.settings.heading}}</h2>
                  {% else %}
                  <h2>{{collection.title}}</h2>
                  {% endif %}
                  <a href="{{collection.url}}" class="link">{{block.settings.btntext}}</a>
                </div>
              </div>
            </div>
          {% endif %}
          {% endif %}
          {% endfor%}
          </div>
          <div class="col-sm-12 col-md-6">
            <div class="row">
              {% for block in section.blocks %}
              {% unless forloop.first %}
              {% if block.settings.collection != blank %}
              {% assign collection = block.settings.collection %}
              <div id="block-{{block.id}}" class="col-sm-12 col-md-6" {{ block.shopify_attributes }}>
                <div class="collection-list-view-wrapper">
                  <div class="collection-list-view-card" >
                    {% if block.settings.image != blank %}
                    <img src="{{ block.settings.image | img_url:'master'}}" />
                    {% else %}
                    <img src="{{ collection.featured_image | img_url:'master'}}" />
                    {% endif %}

                    <div class="list-view-content text__{{block.settings.info_position}}">          
                      {% if block.settings.heading != blank %}
                      <h4>{{block.settings.heading}}</h4>
                      {% else %}
                      <h4>{{collection.title}}</h4>
                      {% endif %}
                      <a href="{{collection.url}}" class="link">{{block.settings.btntext}}</a>
                    </div>
                  </div>
                </div>
              </div>
              {% endif %}
              {% endunless %}
              {% endfor%}
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<style>
  #shopify-section-{{section.id}} {
    padding-top:{{section.settings.top_space_desktop}}px;
    padding-bottom:{{section.settings.bottom_space_desktop}}px;
  }
  @media only screen and (max-width:575px) {
    #shopify-section-{{section.id}}{
      padding-top:{{section.settings.top_space_mobile}}px;
      padding-bottom:{{section.settings.bottom_space_mobile}}px;
    }
  }
</style>
{% schema %}
{
  "name": "t:sections.featured-collections-list.name",
  "tag": "section",
  "class":"collection-list-section",
	"max_blocks":5,
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "default": "Collection list",
      "label": "t:sections.featured-collections-list.settings.heading.label"
    },
    {
      "type": "range",
      "id": "top_space",
      "label": "t:sections.featured-collections-list.settings.top_space.label",
      "default":30,
      "min":0,
      "max":60,
      "step":5
    },
    {
      "type": "range",
      "id": "bottom_space",
      "label": "t:sections.featured-collections-list.settings.bottom_space.label",
      "default":30,
      "min":0,
      "max":60,
      "step":5
    }
  ],
  "blocks": [
	  {
      "type":"collection",
      "name":"t:sections.featured-collections-list.blocks.collection.name",
      "settings": [        
        {
          "type": "collection",
          "id": "collection",
          "label": "t:sections.featured-collections-list.blocks.collection.settings.collection.label"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "t:sections.featured-collections-list.blocks.collection.settings.image.label"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "t:sections.featured-collections-list.blocks.collection.settings.heading.label"
        },
        {
          "type": "text",
          "id": "btntext",
          "default": "Shop Now",
          "label": "t:sections.featured-collections-list.blocks.collection.settings.btntext.label"
        },
        {
          "type": "select",
          "id": "info_position",
          "label": "t:sections.featured-collections-list.blocks.collection.settings.info_position.label",
          "default": "left",
          "options": [
          {
            "label": "t:sections.featured-collections-list.blocks.collection.settings.info_position.left.label",
            "value": "left"
          },
          {
            "label": "t:sections.featured-collections-list.blocks.collection.settings.info_position.center.label",
            "value": "center"
          },
          {
            "label": "t:sections.featured-collections-list.blocks.collection.settings.info_position.right.label",
            "value": "right"
          }
          ]
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "t:sections.featured-collections-list.presets.name",
      "blocks": [
        {
          "type": "collection"
        },
        {
          "type": "collection"
        },
        {
          "type": "collection"
        }
      ]
    }
  ]
}
{% endschema %}