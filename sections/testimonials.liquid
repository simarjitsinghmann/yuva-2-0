
<div class="container ">
    <div class="testimonials-variation-{{section.settings.style}}">
      {% if section.settings.style == 'style1' %}
          <div class="shopify__top__section text__center">
              <small>{{section.settings.subheading}}</small>
              <h2>{{section.settings.heading}}</h2>  
              
              {% if section.settings.description %}
              <p>{{section.settings.description}}</p>
              {% endif %}
          </div>
          {% if section.blocks.size > 0 %}
            <div class="testimonial-slider ">
                <div id="testimonials-{{section.id}}" class="testimonial-slide slider-items" >
                    {% for block in section.blocks %}
                    <div class="item" {{ block.shopify_attributes }}>
                        <div class="slider-content">
                          {% if block.settings.image != blank %}
                              {% assign image_url = block.settings.image | img_url:'master' %}
                              {% else %}
                              {% assign image_url = "https://yova.shinedezign.pro/assets/images/client-image.png" %}
                              {% endif %}

                            <img src="{{image_url}}" loading="lazy" alt="{{section.settings.author}}">
                            <div class="slider-caption">
                                <p class="testimonial-title">{{block.settings.message}}</p>
                                <h5 class="author">{{block.settings.author}}</h5>
                                <span>{{block.settings.from}}</span>
                            </div>
                        </div>
                    </div>
                    {% endfor %}
                </div>
            </div>
          {% endif %}
          {% elsif section.settings.style == 'style2' %}
      <div class="row">
            <div class="col-sm-12 col-md-12 col-lg-3">
              <div class="client-say-left">       
                <small>{{section.settings.subheading}}</small>
                <h2>{{section.settings.heading}}</h2>  
                {% if section.settings.description %}
                <p>{{section.settings.description}}</p>
                {% endif %}
              </div>
            </div>
          
          {% if section.blocks.size > 0 %}
            <div class="col-sm-12 col-md-12 col-lg-9">
                <div class="client-slider">
                  <div class="testimonial-slider testimonial-variation2">
                      <div id="testimonials-{{section.id}}" class="testimonial-client-slide slider-items">
                        {% for block in section.blocks %}
                        <div class="item" {{ block.shopify_attributes }}>
                            <div class="slider-item">
                              <div class="slider-box">
                                {% if block.settings.image != blank %}
                                {% assign image_url = block.settings.image | img_url:'master' %}
                                {% else %}
                                {% assign image_url = "https://yova.shinedezign.pro/assets/images/client-image.png" %}
                                {% endif %}
                                  <div class="client-image">            
                                    <img src="{{image_url}}" loading="lazy" alt="{{section.settings.author}}">                  
                                  </div>
                                  <h5 class="author">{{block.settings.author}}</h5>
                                  <p class="testimonial-title">{{block.settings.message}}</p>
                              </div>
                            </div>
                        </div>
                        {% endfor %}
                      </div>
                    
                  </div>
                </div>
            </div>
          {% endif %}
      </div>
    {% endif %} 
    </div>
  <script type="application/json" name="slider-json">
                     {
                      "center":true,
                      "items":3,
                      "loop":true,
                      "margin":30,
                     "dots":{{section.settings.dots}},
                      "slideSpeed": 1200,
                      "paginationSpeed": 500,
                      "autoplay":{{section.settings.rotate}},
                      "nav":{{section.settings.arrows}},
                     "slideSpeed":100,
                      "autoHeight":false,
                      "autoPlaySpeed":1000,
            			"responsiveClass":true,
                       "navText":[
                          "<svg aria-hidden=\"true\" focusable=\"false\" viewBox=\"0 0 24 24\" role=\"img\" width=\"24px\" height=\"24px\" fill=\"none\"><path stroke=\"currentColor\" stroke-width=\"1.5\" d=\"M15.526 18.966L8.559 12l6.967-6.967\"></path></svg>",
                          "<svg aria-hidden=\"true\" focusable=\"false\" viewBox=\"0 0 24 24\" role=\"img\" width=\"24px\" height=\"24px\" fill=\"none\"><path stroke=\"currentColor\" stroke-width=\"1.5\" d=\"M8.474 18.966L15.44 12 8.474 5.033\"></path></svg>"
                       ],
                      "responsive": {
                       "200": {
                            "items": 1,
                            "center": false,
                            "autoplay": true,
                            "autoplayTimeout": 4000,
                            "autoplaySpeed": 3000,
                            "autoplayHoverPause": true
                          },
                          "768": {
                              "items": 2,
                              "center": false,
                              "margin": 15
                          },
                          "1200": {
                              "items": 3
                          }
                      }
                    }
  </script>
</div>
<style>
    #shopify-section-{{section.id}}{
      background-color:{{section.settings.bgcolor}};
    }
  </style>
<script>
  var elem = document.querySelector('.slider-items');
var flkty = new Flickity( elem, {
  // options
  cellAlign: 'left',
  contain: true,
  fade: true,
      autoplay:{%- if section.settings.rotate -%}{{-section.settings.rotate_speed | times:1000-}}{%- else -%}{{-section.settings.rotate-}}{%-endif-%},
                      pageDots:{{-section.settings.dots-}},
                      prevNextButtons:{{-section.settings.arrows-}}
});

</script>
