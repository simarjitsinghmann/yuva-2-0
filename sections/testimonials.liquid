
<div class="container testimonials-variation-{{section.settings.style}}">
    <div class="row">
      {% if section.settings.style == 'style1' %}
          <div class="shopify__top__section text__center">
              <small>{{section.settings.subheading}}</small>
              <h2>{{section.settings.heading}}</h2>  
              
              {% if section.settings.description %}
              <p>{{section.settings.description}}</p>
              {% endif %}
          </div>
          {% if section.blocks.size > 0 %}
            <div class="testimonial-slider ">
                <div id="testimonials-{{section.id}}" class="testimonial-slide owl-carousel owl-theme" data-dots="false" data-nav="true">
                    {% for block in section.blocks %}
                    <div class="item">
                        <div class="slider-content">
                          {% if block.settings.image != blank %}
                              {% assign image_url = block.settings.image | img_url:'master' %}
                              {% else %}
                              {% assign image_url = "https://yova.shinedezign.pro/assets/images/client-image.png" %}
                              {% endif %}

                            <img src="{{image_url}}" loading="lazy" alt="{{section.settings.author}}">
                            <div class="slider-caption">
                                <p class="testimonial-title">{{block.settings.message}}</p>
                                <h5 class="author">{{block.settings.author}}</h5>
                                <span>{{block.settings.from}}</span>
                            </div>
                        </div>
                    </div>
                    {% endfor %}
                </div>
            </div>
          {% endif %}
          {% elsif section.settings.style == 'style2' %}
            <div class="col-sm-12 col-md-12 col-lg-3">
              <div class="client-say-left">       
                <small>{{section.settings.subheading}}</small>
                <h2>{{section.settings.heading}}</h2>  
                {% if section.settings.description %}
                <p>{{section.settings.description}}</p>
                {% endif %}
              </div>
            </div>
          
          {% if section.blocks.size > 0 %}
            <div class="col-sm-12 col-md-12 col-lg-9">
                <div class="client-slider">
                  <div class="testimonial-slider testimonial-variation2">
                      <div id="testimonials-{{section.id}}" class="testimonial-client-slide owl-carousel owl-theme" data-dots="true" data-nav="false">
                        {% for block in section.blocks %}
                        <div class="item">
                            <div class="slider-item">
                              <div class="slider-box">
                                {% if block.settings.image != blank %}
                                {% assign image_url = block.settings.image | img_url:'master' %}
                                {% else %}
                                {% assign image_url = "https://yova.shinedezign.pro/assets/images/client-image.png" %}
                                {% endif %}
                                  <div class="client-image">            
                                    <img src="{{image_url}}" loading="lazy" alt="{{section.settings.author}}">                  
                                  </div>
                                  <h5 class="author">{{block.settings.author}}</h5>
                                  <p class="testimonial-title">{{block.settings.message}}</p>
                              </div>
                            </div>
                        </div>
                        {% endfor %}
                      </div>
                  </div>
                </div>
            </div>
          {% endif %}
    {% endif %} 
    </div>
</div>
<style>
    #shopify-section-{{section.id}}{
      background-color:{{section.settings.bgcolor}};
    }
  </style>
  <script>
    jQuery(document).ready(function($) {
      var previcon='<svg width="100%" viewBox="0 0 24 24"> <path d="M12 0 9.87 2.11l8.35 8.36H0v3h18.22l-8.35 8.36L12 23.94 24 12z" focusable="false"></path> </svg>';
      var nexticon='<svg width="100%" viewBox="0 0 24 24"> <path d="M12 0 9.87 2.11l8.35 8.36H0v3h18.22l-8.35 8.36L12 23.94 24 12z" focusable="false"></path> </svg>';
        $('#testimonials-{{section.id}}').owlCarousel({
            center: true,
            items: 3,
            loop: true,
            margin: 30,
            dots:$('#testimonials-{{section.id}}').data('dots'),
            slideSpeed: 1200,
            paginationSpeed: 500,
          autoplay:true,
          autoPlaySpeed: 500,
            responsiveClass:true,
            nav:$('#testimonials-{{section.id}}').data('nav'),
            navText: [previcon,nexticon],
            responsive: {
                740: {
                    items: 1,
          			center: false	
                },
                768: {
                    items: 2,
          			center: false,
          			margin: 15,
                },
                1200: {
                    items: 3
                }
            }
        });
    });
  </script> 
