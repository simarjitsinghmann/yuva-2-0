<section id="product-slider">
	<div class="container-fluid">
		<div class="row">
			<div class="slider-list">
				<div class="d-flex">
				  <div class="loopED owl-carousel owl-theme">
					{% for block in section.blocks %}
					<div class="item">
						{% if block.settings.image != blank %}
					  <img src="{{block.settings.image | img_url:'master'}}" loading="lazy" alt="">
						{% endif %}
							<div class="carousel-caption">
							<div class="container">
								<div class="row">
									{% case block.type %}
										{% when "style1" %}
										<div class="carousel-caption-title style1">
											{% if block.settings.heading != blank %}
											<h1 class="smaller-heading">{{block.settings.heading}}</h1>
										{% endif %}
											{% if block.settings.subheading != blank %}
											<h1 class="bigger-heading">{{block.settings.subheading}}</h1>
										{% endif %}
											{% if block.settings.content != blank %}
											<h3 class="top-title">{{block.settings.content}}</h3>
										{% endif %}
											{% if block.settings.sale != blank %}
											<div class="offer-box">
												<p class="big-size"><span class="offer-catg">upto</span>{{block.settings.sale}} <sup>OFF</sup></p>
											</div>
										{% endif %}
											{% if block.settings.btn != blank %}
											<a href="{{block.settings.link}}" class="black-btn button">{{block.settings.btn}}<i class="fas fa-arrow-right"></i></a>
										{% endif %}
										</div>
									{% when "style2" %}
									<div class="carousel-caption-title style2">
										{% if block.settings.heading != blank %}
										<h2 class="top-title">{{block.settings.heading}}</h2>
									{% endif %}
										{% if block.settings.subheading != blank %}
										<h1 class="smaller-heading">{{block.settings.subheading}}</h1>
									{% endif %}
										{% if block.settings.sale != blank %}
										<h1 class="bigger-heading">{{block.settings.sale}}</h1>
									{% endif %}
										{% if block.settings.content != blank %}
										<h5 class="bottom-title">{{block.settings.content}}</h5>
									{% endif %}
										{% if block.settings.btn != blank %}
										<a href="{{block.settings.link}}" class="black-btn button">{{block.settings.btn}}<i class="fas fa-arrow-right"></i></a>
									{% endif %}
									</div>
								{% endcase %}
								</div>
							</div>
						</div>
					</div>
				{% endfor %}
				  </div>
				 </div>
			</div>
		</div>
	</div>
</section>
{% javascript %}
jQuery(document).ready(function($) {
	$('.loop').owlCarouSSsel({
	 center: false,
	 items: 1,
	 loop: true,
	 margin: 0,
	 dots:false,
	 //autoplay:true,
	 slideSpeed: 4000,
	 autoPlaySpeed: 4000,
	 responsiveClass:true,
	 responsive: {
	   600: {
		 items: 1
	   }
	 }
  });
});
{% endjavascript %}
{% schema %}
