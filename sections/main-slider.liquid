  "name": "main-slider",
  "tag": "section",
  "blocks": [
	  {
	  "type":"style1",
	  "name":"t:sections.main-slider.blocks.style1.name",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "default": "Heading",
          "label": "t:sections.main-slider.blocks.style1.settings.heading.label"
        },
        {
          "type": "text",
          "id": "subheading",
          "default": "Sub Heading",
          "label": "t:sections.main-slider.blocks.style1.settings.subheading.label"
        },
        {
          "type": "text",
          "id": "content",
          "default": "content",
          "label": "t:sections.main-slider.blocks.style1.settings.content.label"
        },
        {
          "type": "text",
          "id": "sale",
          "default": "70%",
          "label": "t:sections.main-slider.blocks.style1.settings.sale.label"
        },
        {
          "type": "text",
          "id": "btn",
          "default": "Explore Now",
          "label": "t:sections.main-slider.blocks.style1.settings.btn.label"
        },
        {
          "type": "url",
          "id": "link",
          "label": "t:sections.main-slider.blocks.style1.settings.link.label"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "t:sections.main-slider.blocks.style1.settings.image.label"
        }
      ]
	},
	{
		"type":"style2",
		"name":"t:sections.main-slider.blocks.style2.name",
		"settings": [
			{
				"type": "text",
				"id": "heading",
				"default": "Heading",
				"label": "t:sections.main-slider.blocks.style2.settings.heading.label"
			},
			{
				"type": "text",
				"id": "subheading",
				"default": "Sub Heading",
				"label": "t:sections.main-slider.blocks.style2.settings.subheading.label"
			},
			{
				"type": "text",
				"id": "sale",
				"default": "Sale 40%",
				"label": "t:sections.main-slider.blocks.style2.settings.sale.label"
			},
			{
				"type": "text",
				"id": "content",
				"default": "content",
				"label": "t:sections.main-slider.blocks.style2.settings.content.label"
			},
			{
			  "type": "text",
			  "id": "btn",
			  "default": "Explore Now",
			  "label": "t:sections.main-slider.blocks.style2.settings.btn.label"
			},
			{
			  "type": "url",
			  "id": "link",
			  "label": "t:sections.main-slider.blocks.style2.settings.link.label"
			},
			{
			  "type": "image_picker",
			  "id": "image",
			  "label": "t:sections.main-slider.blocks.style2.settings.image.label"
			}
		]
	}
  ],
  "presets": [
    {
      "name": "t:sections.main-slider.presets.name"
    }
  ]
}
{% endschema %}
