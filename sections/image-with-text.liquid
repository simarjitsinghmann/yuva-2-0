<div class="section-spacer">
  {%- capture image_content -%}
  <div class="col-12 col-sm-12 col-md-6">
    <div class="left-img-content">
  {%- if section.settings.image != blank -%}
      {% include 'lazy-image' image:section.settings.image %}
  {%- else -%}
      <img src="{{'placeholder.svg' | asset_url}}" alt="{{shop.name}}" />
  {%- endif -%}
    </div>
  </div>
  {%- endcapture -%}
  <div class="container">
    <div class="inner-container">
      <div class="row align-items-center image-position-{{section.settings.image_alignment}}">
        {% if section.settings.image_alignment == 'left' %}
        {{- image_content -}}
        {% endif %}
        <div class="col-12 col-sm-12 col-md-6">
          <div class="right-text-content">
            <h2 class="content-heading">{{section.settings.heading}}</h2>
            {{section.settings.content}}
          </div>
        </div>

        {% if section.settings.image_alignment == 'right' %}
        {{- image_content -}}
        {% endif %}
      </div>
    </div>
  </div>
</div>
<style>
  #shopify-section-{{section.id}}.shopify-section {
    padding-top:{{section.settings.top_space_desktop}}px;
    padding-bottom:{{section.settings.bottom_space_desktop}}px;
  }
  @media only screen and (max-width:575px) {
    #shopify-section-{{section.id}}.shopify-section{
      padding-top:{{section.settings.top_space_mobile}}px;
      padding-bottom:{{section.settings.bottom_space_mobile}}px;
    }
  }
</style>
{% schema %}
  {
    "name": "t:sections.image-with-text.name",
    "tag": "section",
    "class":"image-with-text-section",
    "settings": [
        {
            "type":"image_picker",
            "id":"image",
            "label":"t:sections.image-with-text.settings.image.label"
        },
        {
          "type": "select",
          "id": "image_alignment",
          "label": "t:sections.image-with-text.settings.image_alignment.label",
          "default": "left",
          "options": [
            {
            "label": "t:sections.image-with-text.settings.image_alignment.options.left.label",
            "value": "left"
            },
            {
            "label": "t:sections.image-with-text.settings.image_alignment.options.right.label",
            "value": "right"
            }
          ]
        },
        {
            "type":"text",
            "id":"heading",
            "label":"t:sections.image-with-text.settings.heading.label",
            "default":"Yuva Our Story"
        },
        {
            "type":"richtext",
            "label":"t:sections.image-with-text.settings.content.label",
            "id":"content",
			"default":"<p>Lorem Ipsumis simply dummy text of the printing an typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen book.</p>"
        },
        {
          "type": "range",
          "id": "top_space_desktop",
          "label": "t:sections.image-with-text.settings.top_space_desktop.label",
          "default":30,
          "min":0,
          "max":60,
          "step":5
        },
        {
          "type": "range",
          "id": "bottom_space_desktop",
          "label": "t:sections.image-with-text.settings.bottom_space_desktop.label",
          "default":30,
          "min":0,
          "max":60,
          "step":5
        },
        {
          "type": "range",
          "id": "top_space_mobile",
          "label": "t:sections.image-with-text.settings.top_space_mobile.label",
          "default":30,
          "min":0,
          "max":60,
          "step":5
        },
        {
          "type": "range",
          "id": "bottom_space_mobile",
          "label": "t:sections.image-with-text.settings.bottom_space_mobile.label",
          "default":30,
          "min":0,
          "max":60,
          "step":5
        }
  	],
    "presets": [
      {
        "name": "t:sections.image-with-text.presets.name"
      }
    ]
  }
{% endschema %}

{% stylesheet %}
{% endstylesheet %}

