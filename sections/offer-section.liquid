<div class="section-spacer">
  <div class="container">
    <div class="shopify__top__section text__center" data-aos="zoom-in">
      <div class="section-heading-box">
        <small>{{section.settings.subheading}}</small>
        <h2>{{section.settings.heading}}</h2>
      </div>
    </div>
    <div class="offer-list">
      <div class="row {% if section.settings.style == 'style2' %}style_variation_2{%else%}style_variation_1{% endif %} row-items-{{section.blocks.size}}">
        {% for block in section.blocks%}
        <div  class="{% if section.blocks.size == 1%}col-12{%else%}col-10{% endif %} col-sm-6 col-md-4">
          <div class="card-wrapper">
            <div class="card-information">
                <a href="{{block.settings.link}}" class="animate_hvrbr">
              <div class="card-information-image">
                  {% if block.settings.image != blank  %}
                  {% assign feature_image = block.settings.image  %}
                  {%else%}
                  {% assign feature_image = 'featured_image.png' | asset_url %}
                  {% endif %}
                  {% render 'lazy-image' image: feature_image%}
              </div>
              {% unless block.settings.heading == blank and block.settings.subheading == blank %}
              <div class="card-information__wrapper {% if section.settings.style  == 'style2' %}text__{{section.settings.info_position}}{% else %}bottom-{{section.settings.info_position}}{% endif %} content-border-{{section.settings.show_border}}" >
                {% if block.settings.heading != blank %}
                <h5 data-aos="fade-up" data-aos-duration="1500">{{block.settings.heading}}</h5>
                {% endif%}
                {% if block.settings.subheading != blank %}
                {{block.settings.subheading}}
                {% endif%}
              </div>
              {% endunless %}
              </a>
            </div>
          </div>
        </div>
        {% endfor%}
      </div>
    </div>
  </div>
</div>
<style>
  #shopify-section-{{section.id}}.shopify-section{
    background-color:{{section.settings.color}};
    padding-top:{{section.settings.top_space_desktop}}px;
    padding-bottom:{{section.settings.bottom_space_desktop}}px;
  }
  @media only screen and (max-width:575px) {
    #shopify-section-{{section.id}}.shopify-section{
      padding-top:{{section.settings.top_space_mobile}}px;
      padding-bottom:{{section.settings.bottom_space_mobile}}px;
    }
  }
</style>
{% schema %}
{
   "name":"t:sections.offer-section.name",
   "tag":"section",
   "class":"offer-section",
   "max_blocks":3,
   "settings":[
      {
         "type":"text",
         "id":"subheading",
         "default":"BEST FOR YOU",
         "label":"t:sections.offer-section.settings.subheading.label"
      },
      {
         "type":"text",
         "id":"heading",
         "default":"What's More",
         "label":"t:sections.offer-section.settings.heading.label"
      },
      {
         "type":"color",
         "id":"color",
         "default":"#efedeb",
         "label":"t:sections.offer-section.settings.color.label"
      },
      {
         "type":"select",
         "id":"style",
         "label":"t:sections.offer-section.settings.style.label",
         "default":"style1",
         "options":[
            {
               "label":"t:sections.offer-section.settings.style.style1.label",
               "value":"style1"
            },
            {
               "label":"t:sections.offer-section.settings.style.style2.label",
               "value":"style2"
            }
         ]
      },
      {
        "type":"select",
        "id":"info_position",
        "label":"t:sections.offer-section.settings.info_position.label",
        "default":"left",
        "options":[
          {
            "label":"t:sections.offer-section.settings.info_position.bottom-left.label",
            "value":"left"
          },
          {
            "label":"t:sections.offer-section.settings.info_position.center.label",
            "value":"center"
          },
          {
            "label":"t:sections.offer-section.settings.info_position.bottom-right.label",
            "value":"right"
          }
        ]
      },
      {
         "type":"checkbox",
         "id":"show_border",
         "default":true,
         "label":"t:sections.offer-section.settings.show_border.label"
      },
      {
         "type":"range",
         "id":"top_space_desktop",
         "label":"t:sections.offer-section.settings.top_space_desktop.label",
         "default":30,
         "min":0,
         "max":60,
         "step":5
      },
      {
         "type":"range",
         "id":"bottom_space_desktop",
         "label":"t:sections.offer-section.settings.bottom_space_desktop.label",
         "default":30,
         "min":0,
         "max":60,
         "step":5
      },
      {
         "type":"range",
         "id":"top_space_mobile",
         "label":"t:sections.offer-section.settings.top_space_mobile.label",
         "default":30,
         "min":0,
         "max":60,
         "step":5
      },
      {
         "type":"range",
         "id":"bottom_space_mobile",
         "label":"t:sections.offer-section.settings.bottom_space_mobile.label",
         "default":30,
         "min":0,
         "max":60,
         "step":5
      }
   ],
   "blocks":[
      {
         "type":"offer",
         "name":"t:sections.offer-section.blocks.offer.name",
         "settings":[
            {
               "type":"text",
               "id":"heading",
               "default":"Heading",
               "label":"t:sections.offer-section.blocks.offer.settings.heading.label"
            },
            {
               "type":"richtext",
               "id":"subheading",
               "default":"<p>Flat Up To</p>",
               "label":"t:sections.offer-section.blocks.offer.settings.subheading.label"
            },
            {
               "type":"image_picker",
               "id":"image",
               "label":"t:sections.offer-section.blocks.offer.settings.image.label"
            },
            {
               "type":"url",
               "id":"link",
               "label":"t:sections.offer-section.blocks.offer.settings.link.label"
            }
         ]
      }
   ],
   "presets":[
      {
         "name":"t:sections.offer-section.presets.name",
         "blocks":[
            {
               "type":"offer"
            },
            {
               "type":"offer"
            },
            {
               "type":"offer"
            }
         ]
      }
   ]
}
{% endschema %}