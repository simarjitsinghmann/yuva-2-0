<div class="container">
  <div class="section-heading center-heading">
    <h2>Collection Trending Product</h2>
  </div>
  {% if section.blocks.size > 0 %}
  <div class="yv-tabs-wrapper">
    <ul class="yv-tabs">
      {% assign customIndex = 0 %}
      {% for block in section.blocks %}
      {% if block.settings.collection != blank or block.settings.collection.all_products_count > 0 %}
      {% assign customIndex = customIndex | plus:1 %}
      <li class="yv-tab-item {% if customIndex == 1 %}active{% endif %}" data-slider="#id="slider-{{section.id}}"" data-products="product-{{block.id}}"><a href="javascript:void(0)" class="yv-tab-link">
        {% if block.settings.heading != blank %}
        {{block.settings.heading}}
        {% else %}
        {{block.settings.collection.title}}
        {% endif %}
        </a>
      </li>
      {% endif %}
      {% endfor %}
    </ul>
    <div class="yv-tab-content">
      <div class="yv-tab-pane">
        <div id="slider-{{section.id}}" class="yv-featured-product-grid" data-slider>
          {% for block in section.blocks %}
          {%assign mainClass='product-'| append:block.id%}
          {% if block.settings.collection != blank or block.settings.collection.all_products_count > 0 %}
          {% for product in block.settings.collection.products %}
          {% include 'product-grid-custom' hideClass:true ,productClasses:mainClass %}
          {% endfor %}
          {% endif %}
          {% endfor %}
      </div>
    </div>
    {% endif %}
  </div>
</div>
<script type="application/json" name="slider-json">
         {
          "slidesToShow":4,
          "slidesToScroll":1,
          "infinite": false,
          "centerMode":false,
            "speed": 1000,
            "centerPadding":0,
          "prevArrow":"<button type=\"button\" class=\"slick-prev\" aria-label=\"Prev\"><span><svg aria-hidden=\"true\" focusable=\"false\" viewBox=\"0 0 24 24\" role=\"img\" width=\"24px\" height=\"24px\" fill=\"none\"><path stroke=\"currentColor\" stroke-width=\"1.5\" d=\"M15.526 18.966L8.559 12l6.967-6.967\"></path></svg></span></button>",
          "nextArrow":"<button type=\"button\" class=\"slick-next\" aria-label=\"Next\"><span><svg aria-hidden=\"true\" focusable=\"false\" viewBox=\"0 0 24 24\" role=\"img\" width=\"24px\" height=\"24px\" fill=\"none\"><path stroke=\"currentColor\" stroke-width=\"1.5\" d=\"M8.474 18.966L15.44 12 8.474 5.033\"></path></svg></span></button>",
          "responsive":[
          	{
            "breakpoint": 768,
                "settings": {
                    "dots":true,
                    "arrows":false,
                    "draggable":true
                  }
            }
          ]
        }
</script>
