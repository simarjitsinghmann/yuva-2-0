<div class="container">
  <div class="section-heading center-heading">
    <h2>Collection Trending Product</h2>
  </div>
  {% if section.blocks.size > 0 %}
  <div class="yv-tabs-wrapper">
    <ul class="yv-tabs">
      {% assign customIndex = 0 %}
      {% for block in section.blocks %}
      {% if block.settings.collection != blank or block.settings.collection.all_products_count > 0 %}
      {% assign customIndex = customIndex | plus:1 %}
      <li class="yv-tab-item {% if customIndex == 1 %}active{% endif %} filter-products" data-nav="#slider-{{section.id}}" data-products="product-{{block.id}}"><a href="javascript:void(0)" class="yv-tab-link">
        {% if block.settings.heading != blank %}
        {{block.settings.heading}}
        {% else %}
        {{block.settings.collection.title}}
        {% endif %}
        </a>
      </li>
      {% endif %}
      {% endfor %}
    </ul>
    <div class="yv-tab-content">
      <div class="yv-tab-pane">
        <div id="slider-{{section.id}}" class="yv-collection-product-grid " data-slider-filter data-slider>
          {% for block in section.blocks %}
          {%assign mainClass='filter-slide'%}
          {% assign mainAttr = 'data-filter-item="product-'| append:block.id | append:'"' %}
          {% if block.settings.collection != blank or block.settings.collection.all_products_count > 0 %}
          {% for product in block.settings.collection.products %}
          {% include 'custom-product-grid' productClasses:mainClass,mainAttr:mainAttr %}
          {% endfor %}
          {% endif %}
          {% endfor %}
        </div>
      </div>
      {% endif %}
    </div>
  </div>
</div>
  <script type="application/json" name="slider-json">
         {
