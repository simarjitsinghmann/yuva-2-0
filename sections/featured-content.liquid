<div class="container">
  <div class="inner-container">
    <h2 class="content-heading text-center">{{section.settings.heading}}</h2>
    <div class="row">
      {% for block in section.blocks %}
      <div class="col-12 col-sm-6 col-md-4">
        <div class="about-feature-box">
          <div class="feature-icon">{% if block.settings.icon != blank %}<img src="{{block.settings.icon | img_url:'master'}}"/>{% endif %}</div>
          <h5>{{block.settings.heading}}</h5>
          <p>{{block.settings.content}}</p>
        </div>
      </div>
      {% endfor %}
    </div>
  </div>
</div>
{% schema %}
  {
    "name": "t:sections.featured-content.name",
    "tag": "section",
    "class":"about-best-choice featured-content-section",
    "max_blocks":3,
    "settings": [
        {
            "type":"text",
            "id":"heading",
            "label":"t:sections.featured-content.settings.heading.label",
            "default":"Why We Are Your Best Choice"
        },
        {
          "type": "color",
          "id": "bgcolor",
          "label": "t:sections.featured-content.settings.bgcolor.label",
          "default":"#ffffff"
        }
  	],
	"blocks":[
		{
          "type": "featured-content",
          "name":"Feature",
          "settings": [
              {
                  "type":"text",
                  "id":"heading",
                  "label":"t:sections.featured-content.blocks.feature-content.settings.heading.label",
                  "default":"Feature Title"
              },
              {
                  "type":"textarea",
                  "id":"content",
                  "label":"t:sections.featured-content.blocks.feature-content.settings.content.label"
              },
              {
                  "type":"image_picker",
                  "id":"icon",
                  "label":"t:sections.featured-content.blocks.feature-content.settings.icon.label"
              }
          ]
		}
	],
    "presets": [
      {
        "name": "t:sections.featured-content.presets.name"
      }
    ]
  }
{% endschema %}

