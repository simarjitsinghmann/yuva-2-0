<div class="container"> 
  <div class="shopify__top__section text__center">
    <div class="section-heading-box">
      <small>{{section.settings.heading}}</small>
      <h2>{{section.settings.subheading}} 
        {% if section.settings.button != blank %}
        <a class="view-all corner-view" href="{{section.settings.link}}">{{section.settings.button}}</a></h2>
      	{% endif %}
    </div>
    {% if section.blocks.size > 0  %}
    <div class="blog-multi-slide " role="list">  
      <div class="">
        <div id="featuredBlog-{{section.id}}" class="blog__post owl-carousel" data-slider>         
          {% for block in section.blocks %}  
          {% if block.settings.article != blank %}  
          {% assign article = block.settings.article %}
          {% include 'featured-article-grid' %}
          {% else %}
          <div class="item grid__item style1">
            <div class="post-wrapper">
              <div class="post-information">
                {% assign article_image = 'featured_image.png' | asset_url %}                
                <div class="post-information-image">
                    <img src="{{article_image}}" alt="">
                </div>
                <div class="post-information__wrapper text__left">
                  <div class="post-date">
                    <h4 class="custom-title">12  Oct 2021 </h4>
                </div>
                  <div class="post-name">
                    <h6><a href="">Article Title</a></h6>
                    <p>Loream ipsum Loream ipsum Loream ipsum</p>
                  </div>
                </div>
              </div>
            </div>
          </div>
          {% endif %}
          {% endfor %}
        </div>
      	<script type="application/json" name="slider-json">
           
         {
          "slidesToShow":3,
          "slidesToScroll":1,
          "infinite":true,
          "speed": 1000,
         "dots":false,
          "autoplay":false,
          "arrows":false,
          "prevArrow":"<button type=\"button\" class=\"slick-prev\"><svg aria-hidden=\"true\" focusable=\"false\" viewBox=\"0 0 24 24\" role=\"img\" width=\"24px\" height=\"24px\" fill=\"none\"><path stroke=\"currentColor\" stroke-width=\"1.5\" d=\"M15.526 18.966L8.559 12l6.967-6.967\"></path></svg></button>",
          "nextArrow":"<button type=\"button\" class=\"slick-next\"><span><svg aria-hidden=\"true\" focusable=\"false\" viewBox=\"0 0 24 24\" role=\"img\" width=\"24px\" height=\"24px\" fill=\"none\"><path stroke=\"currentColor\" stroke-width=\"1.5\" d=\"M8.474 18.966L15.44 12 8.474 5.033\"></path></svg></button>",
          "responsive":[
          	{
            "breakpoint": 768,
              "settings": {
              	"slidesToShow": 2
              }
            },
          	{
            "breakpoint": 500,
                "settings": {
                    "slidesToShow": 1
                  }
            }
          ]
        }
      </script>
      </div>
    </div>
    {% endif %}
  </div>
</div>
<style>
  #shopify-section-{{section.id}}{
    background-color:{{section.settings.color}};
  }
</style>
{% schema %}
{
    "name": "t:sections.featured-blog.name",
    "tag": "section",
    "class":"blog-post",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "default": "CONSECTETUR",
        "label": "t:sections.featured-blog.settings.heading.label"
      },
      {
        "type": "textarea",
        "id": "subheading",
        "default": "Blog post everyday",
        "label": "t:sections.featured-blog.settings.subheading.label"
      },
      {
        "type": "text",
        "id": "button",
        "default": "View all",
        "label": "t:sections.featured-blog.settings.button.label"
      },
      {
        "type": "url",
        "id": "link",
        "label": "t:sections.featured-blog.settings.link.label"
      },
      {
        "type": "color",
        "id": "color",
        "label": "t:sections.featured-collections-list.settings.color.label",
        "default":"#ffffff"
      }
    ],
    "blocks":[
      {
        "type":"article",
         "name":"t:sections.featured-blog.blocks.article.name",
         "settings":[
          {
          "type":"article",
          "id":"article",
          "label": "t:sections.featured-blog.blocks.article.settings.article.label"
          }
           ]
       }
         ],
    "presets": [
      {
        "name": "t:sections.featured-blog.presets.name",
        "category": "Blog"
      }
    ]
  }
  {% endschema %}