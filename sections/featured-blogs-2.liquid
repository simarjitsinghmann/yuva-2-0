<div class="container"> 
  <div class="section-heading">
     <h2>{{-section.settings.subheading}} 
          <a class="corner-view-all" href="{{section.settings.link}}">{{section.settings.button}}</a>
    </h2>
  </div>
  {%- if section.blocks.size > 0  -%}
  <div class="yv-blogs-wrapper"> 
    <div class="row align-items-center">       
      <div class="col-12 col-sm-12 col-md-6 col-lg-5">
            {%- for block in section.blocks limit:1 -%}
        <div class="yv-blog-card featured-blog">
          <a href="#" class="yv-blog-card-img">                    
            <img src="https://cdn.shopify.com/s/files/1/0597/9668/5009/files/blog-img.png?v=1645103327" alt="blog thumbnail image">
          </a>
          <div class="yv-blog-card-text">
            <h4 class="yv-blog-title" href="#">The piece of comfort you can lways designenjoy. walk up with a lot of energy</h4>
            <a href="" class="yv-blog-link">Read More</a>
          </div>
          <span class="yv-blog-date">September 23, 2021 </span>
        </div>
            {%- endfor -%}
      </div>
      {%- if section.blocks.size > 1  -%}
      <div class="col-12 col-sm-12 col-md-6 col-lg-7">
        <div class="row">
            {%- for block in section.blocks offset:1 -%}
          <div class="col-12 col-sm-12 col-md-6 ">
            <div class="yv-blog-card">
              <h3 class="yv-blog-title" href="#">Exclusive Racerback</h3>
              <a href="#" class="yv-blog-card-img">                    
                <img src="https://cdn.shopify.com/s/files/1/0597/9668/5009/files/blog-img.png?v=1645103327" alt="blog thumbnail image">
                <span class="yv-blog-date">September 23, 2021 </span>
              </a>
              <div class="yv-blog-card-text">
                <p class="yv-blog-desc">Lorem ipsum dolor sit amet, vadipiscing elit. In and vehicula lorem sed leo varius, nec cursus augue.</p>
                <a href="" class="yv-blog-link">Read More</a>
              </div>
            </div>
          </div>
            {%- endfor -%}
        </div>
      </div>
      {%- endif -%}
    </div>
  </div>
  {%- endif -%}
</div>


{% schema %}
{
    "name": "t:sections.featured-article.name",
    "tag": "section",
    "class":"blog-post featured-articles-section",
    "max_blocks":3,
    "settings": [
      {
        "type": "text",
        "id": "subheading",
        "default": "Add Blog posts here",
        "label": "t:sections.featured-article.settings.subheading.label"
      },
      {
        "type": "text",
        "id": "heading",
        "default": "Posts",
        "label": "t:sections.featured-article.settings.heading.label"
      },
      {
        "type": "text",
        "id": "button",
        "default": "View all",
        "label": "t:sections.featured-article.settings.button.label"
      },
      {
        "type": "url",
        "id": "link",
        "label": "t:sections.featured-article.settings.link.label"
      },
      {
        "type": "color",
        "id": "color",
        "label": "t:sections.featured-article.settings.color.label",
        "default":"#ffffff"
      },
      {
        "type": "range",
        "id": "top_space_desktop",
        "label": "t:sections.featured-article.settings.top_space_desktop.label",
        "default":40,
        "min":0,
        "max":60,
        "step":5
      },
      {
        "type": "range",
        "id": "bottom_space_desktop",
        "label": "t:sections.featured-article.settings.bottom_space_desktop.label",
        "default":0,
        "min":0,
        "max":60,
        "step":5
      },
      {
        "type": "range",
        "id": "top_space_mobile",
        "label": "t:sections.featured-article.settings.top_space_mobile.label",
        "default":30,
        "min":0,
        "max":60,
        "step":5
      },
      {
        "type": "range",
        "id": "bottom_space_mobile",
        "label": "t:sections.featured-article.settings.bottom_space_mobile.label",
        "default":30,
        "min":0,
        "max":60,
        "step":5
      }
    ],
    "blocks":[
      {
        "type":"article",
         "name":"t:sections.featured-article.blocks.article.name",
         "settings":[
          {
          "type":"article",
          "id":"article",
          "label": "t:sections.featured-article.blocks.article.settings.article.label"
          }
           ]
       }
         ],
    "presets": [
      {
        "name": "t:sections.featured-article.presets.name",
        "category": "Article",
        "blocks": [
          {
            "type": "article"
          },
          {
            "type": "article"
          },
          {
            "type": "article"
          }
        ]
      }
    ]
  }
  {% endschema %}