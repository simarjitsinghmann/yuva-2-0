<div class="top_page_title" {% if section.settings.banner != blank %}style="background:url({{section.settings.banner | img_url:'master'}}) no-repeat center"{% endif %}>
  <div class="container">
    <div class="contact-banner-text">
      <div class="banner_title">
        <h1>{{page.title}}</h1>
      </div>
    </div>
  </div>
</div>
{% schema %}
  {
    "name": "t:sections.contact-page-template.name",
	"templates":["page"],
	"tag":"section",
	"class":"contact-page-form-section",
    "settings": [
      {
        "type": "image_picker",
        "id": "banner",
        "label": "t:sections.contact-page-template.settings.banner.label"
      },
      {
        "type": "header",
        "content": "t:sections.contact-page-template.settings.header2.content"
      },
      {
        "type": "text",
        "id": "form_heading",
        "default": "Get In Touch",
        "label": "t:sections.contact-page-template.settings.form_heading.label"
      },
      {
        "type": "text",
        "id": "form_button",
        "default": "SEND MESSAGE",
        "label": "t:sections.contact-page-template.settings.form_button.label"
      },
      {
        "type": "richtext",
        "id": "form_info",
        "label": "t:sections.contact-page-template.settings.form_info.label"
      }
    ]
  }
{% endschema %}

