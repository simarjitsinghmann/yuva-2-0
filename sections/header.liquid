{% case section.settings.header_style %}
{% when 'header1' %}
{% include 'header-1' %}
{% when 'header2' %}
{% include 'header-2' %}
<style>
  .top-header .nav__header{
    background:{{section.settings.menu_bgcolor}} !important;
  }.top-header .nav__header a.list-menu__item{
    color:{{section.settings.menu_textcolor}} !important;
  }

</style>
{% when 'header3' %}
{% include 'header-3' %}
{% endcase %}
<style>
  #nav_style_3 ul.navbar-nav.list-menu--inline{
    justify-content: {{section.settings.menu_position}};
  }
  #nav_style_3 .navigation__header{
    justify-content: {{section.settings.logo_position}};
  }
</style>
<style>
  header { 
    {% if section.settings.enable_sticky_header %}
    position: sticky;
    top: 0;
    z-index: 3; 
    {% endif %}
    background-color:{{section.settings.header_bgcolor | default:'#fff'}};
  }

  .site-nav-dropdown .inner.dropdown .sub-menu-list {
    width: 250px;
    padding:0 10px;
  }
  .site-nav-dropdown .inner.dropdown.col-md-8 .sub-menu-list {
    width: 200px;
  }
  .site-nav-dropdown .inner.dropdown.col-md-9 .sub-menu-list {
    width: 190px;
  }
  header a,
  .side-menu .back-btn,
  .side-menu .close-btn,
  .header_3 .nav__btn .menu_title,
  .header_3 .category_title h2{ 
    color:{{section.settings.header_textcolor | default:'red'}};
  }
  .header_3 button.navbar-toggler span.navbar-toggler-icon,
  .header_3 button.navbar-toggler span.navbar-toggler-icon:after, 
  .header_3 button.navbar-toggler span.navbar-toggler-icon:before{
    background-color:{{section.settings.header_textcolor | default:'red'}};
  }
  .header_3 .nav__btn:hover button.navbar-toggler span.navbar-toggler-icon,
  .header_3 .nav__btn:hover button.navbar-toggler span.navbar-toggler-icon:after, 
  .header_3 .nav__btn:hover button.navbar-toggler span.navbar-toggler-icon:before{
    background-color:{{section.settings.header_textcolor_hover | default:'green'}};
  }
  header a::after,
  header a::before,
  header a .caret::before,
  header a .caret::after{ 
    border-color:{{section.settings.header_textcolor | default:'red'}} !important;
  }
  header a:hover::after,
  header a:hover::before,
  header a:hover .caret::before,
  header a:hover .caret::after{ 
    border-color:{{section.settings.header_textcolor_hover | default:'green'}} !important;
  }
  header a:not(.drawer-login-btn):hover,
  .side-menu .back-btn:hover,
  .side-menu .close-btn:hover,
  .header_3 .nav__btn:hover .menu_title{ 
    color:{{section.settings.header_textcolor_hover| default:'green'}};
  }
  .menuLinks-wrapper {
    width: 100%;
    display: block;
  }
 .site-nav-dropdown .inner.dropdown .sub-menu-list .site-nav-dropdown li a{
    color:{{section.settings.sub_menu_color}} !important;
  }
  .site-nav-dropdown .inner.dropdown .sub-menu-list .site-nav-dropdown li a:hover{
    color:{{section.settings.sub_hover_color}} !important;
  }
  .side-menu, .side-menu .inner-side .nav-item.dropdown ul.child, .side-menu .inner-side .nav-item.dropdown ul.grandchild{
    background-color:{{section.settings.header_bgcolor | default:'#fff'}};
  }
  @media screen and (max-width:1440px){
    .site-nav-dropdown .inner.dropdown .sub-menu-list,
    .site-nav-dropdown .inner.dropdown.col-md-8 .sub-menu-list{
      width: 175px;
    }
    .site-nav-dropdown .inner.dropdown.col-md-9 .sub-menu-list {
      width: 160px;
    }
    .items-1 .sub-menu-list.mega-images .menu-image-content {
      height: 250px;
    }
  }
</style>
<script>
  {% if section.settings.enable_sticky_header %}
  ///Sticky-header//
  $('body').addClass('{{section.settings.header_style}}')
                     $(window).scroll(function () {
    if($(window).scrollTop()>150){
      $(".top-header").addClass("sticky-header");
      $("header").addClass("sticky-header");
      $("body").addClass("sticky-header");
    }else {
      $(".top-header").removeClass("sticky-header");
      $("header").removeClass("sticky-header");
      $("body").removeClass("sticky-header");
    }
  });
  {% endif %}
  $(document).ready(function(){
    $('.menuLinks-wrapper').masonry({
      itemSelector: '.sub-menu-list'
    });
  })
</script>

<script type="application/ld+json">
  {
    "@context": "http://schema.org",
    "@type": "Organization",
    "name": {{ shop.name | json }},
    {% if section.settings.logo %}
      {% assign image_size = section.settings.logo.width | append: 'x' %}
      "logo": {{ section.settings.logo | img_url: image_size | prepend: "https:" | json }},
    {% endif %}
    "sameAs": [
      {{ settings.social_twitter_link | json }},
      {{ settings.social_facebook_link | json }},
      {{ settings.social_pinterest_link | json }},
      {{ settings.social_instagram_link | json }},
      {{ settings.social_tumblr_link | json }},
      {{ settings.social_snapchat_link | json }},
      {{ settings.social_youtube_link | json }},
      {{ settings.social_vimeo_link | json }}
    ],
    "url": {{ shop.url | append: page.url | json }}
  }
</script>

{%- if request.page_type == 'index' -%}
{% assign potential_action_target = shop.url | append: routes.search_url | append: "?q={search_term_string}" %}
<script type="application/ld+json">
    {
      "@context": "http://schema.org",
      "@type": "WebSite",
      "name": {{ shop.name | json }},
      "potentialAction": {
        "@type": "SearchAction",
        "target": {{ potential_action_target | json }},
        "query-input": "required name=search_term_string"
      },
      "url": {{ shop.url | append: page.url | json }}
    }
</script>
{%- endif -%}

