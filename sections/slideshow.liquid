{
  "name": "t:sections.main-slider.name",
  "tag": "section",
  "class":"shopify-section-slider banner-section",
  "settings":[
	  {
		  "type":"checkbox",
		  "id":"rotate",
		  "label":"t:sections.main-slider.settings.rotate.label",
		  "default":false
	  },
	  {
		  "type":"checkbox",
		  "id":"arrows",
		  "label":"t:sections.main-slider.settings.arrows.label",
		  "default":true
	  },
