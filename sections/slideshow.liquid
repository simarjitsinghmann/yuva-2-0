		  "id":"dots",
		  "label":"t:sections.main-slider.settings.dots.label",
		  "default":true
	  },
	  {
		  "type": "range",
		  "id": "rotate_speed",
		  "min": 1,
		  "max": 10,
		  "step": 1,
		  "unit":"s",
