<div class="container">
    <div class="row">
        <div class="best__for__you shopify__top__section text__center">
            <small>All Products</small>
            <h4>See the latest!</h4>
            <div class="grid grid--4-col-desktop grid--3-col-tablet">
                <div class="grid__item full__item products-grid ">
                    <div class="row column-5 d-flex justify-content-center">
                      {% assign count = 0 %}
                      {% for product in collections.all.products %}
                      {% for item in cart.items %}
                      {% if item.product_id != product.id %}
                      {% include 'product-grid' hide_options:true%}

                      {% assign count = count | plus:1 %}
                      {% break %}
                      {% endif %}
                      {% endfor %}

                      {% if count == 5 %}
                      {% break %}
                      {% endif %}
                      {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<style>
 .product__on__sale {
    background: url(//cdn.shopify.com/s/files/1/0597/9668/5009/t/7/assets/badge-bg.svg?v=10910737147684277171);
    width: 55px;
    height: 20px;
    background-size: 55px;
    background-repeat: no-repeat;
    padding-left: 9px;
    color: #fff;
    text-transform: uppercase;
    font-size: 12px;
    padding-top: 2px;
    font-weight: var(--medium);
}
</style>
{% schema %}
{
  "name": "Featured Products cart",
  "tag": "section",
  "class":"latest__sale",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "default": "All Products",
      "label": "t:sections.featured-collection.settings.heading.label"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "default": "See the latest!",
      "label": "t:sections.featured-collection.settings.subheading.label"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "t:sections.featured-collection.settings.collection.label"
    },
    {
        "type": "range",
        "id": "col_size",
        "min": 2,
        "max": 5,
        "step": 1,
        "label": "t:sections.featured-collection.settings.col_size.label",
        "default": 4
    },
    {
        "type": "range",
        "id": "row_size",
        "min": 1,
        "max": 5,
        "step": 1,
        "label": "t:sections.featured-collection.settings.row_size.label",
        "default": 2
    },
    {
      "type": "checkbox",
      "id": "show_second_image",
      "default": false,
      "label": "t:sections.featured-collection.settings.show_second_image.label"
    }
  ],
  "presets": [
    {
      "name": "t:sections.featured-collection.presets.name"
    }
  ]
}
{% endschema %}