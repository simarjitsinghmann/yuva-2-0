<div class="container">
    <div class="row">
        <div class="best__for__you shopify__top__section text__center">
            <small>All Products</small>
            <h4>See the latest!</h4>
            {% if section.settings.collection != blank %}
            {% assign collection = section.settings.collection %}
            <div class="grid grid--4-col-desktop grid--3-col-tablet">
                <div class="grid__item full__item products-grid ">
                    <div class="row column-{{section.settings.col_size}} d-flex justify-content-center">
                        {% assign limit = section.settings.col_size | times : section.settings.row_size%}
                        {% for product in collection.products limit:limit%}
                        {% include 'product-grid'%}
                        {% endfor %}
                    </div>
                </div>
            </div>
            {% endif%}
        </div>
    </div>
</div>
<style>
 .product__on__sale {
    background: url(//cdn.shopify.com/s/files/1/0597/9668/5009/t/7/assets/badge-bg.svg?v=10910737147684277171);
    width: 55px;
    height: 20px;
    background-size: 55px;
    background-repeat: no-repeat;
    padding-left: 9px;
    color: #fff;
    text-transform: uppercase;
    font-size: 12px;
    padding-top: 2px;
    font-weight: var(--medium);
}
</style>
{% schema %}
{
  "name": "Featured Products cart",
  "tag": "section",
  "class":"latest__sale",
  "settings": [
  ]
}
{% endschema %}