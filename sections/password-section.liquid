<div class="container">
  <div class="password-section-wrapper">
    <div class="passwordInnerArea">
      {% if section.settings.logo_pw != blank %}
      <header role="banner">
        <a href="">
          {% render 'lazy-image' image:section.settings.logo_pw , class:'yuva-logo', max_width:section.settings.logo_max_width %}
        </a>
      </header>
      {% endif %}
      {% if section.settings.heading %}
      <h2>{{ section.settings.heading | escape }}</h2>
      {%else%}
      <h2>{{ 'general.password_page.opening_soon' | t }}</h2>
      {% endif %}
      {% if section.settings.newsletter_title %}
      <p class="desc">{{ section.settings.newsletter_title | escape }}</p>
      {% endif %}
      {% if section.settings.show_newsletter %}
      {% form 'customer' %}
      {%- if form.errors -%}
      <span class="newsletter-form__message form__message error-text" id="Newsletter-error--{{ section.id }}">{{ form.errors.translated_fields['email'] | capitalize }} {{ form.errors.messages['email'] }}</span>
      {%- endif -%}
      {% if form.posted_successfully? %}
      <span class="newsletter-form__message newsletter-form__message--success form__message success-text" id="Newsletter-success--{{ section.id }}" tabindex="-1" autofocus>{{ 'newsletter.success' | t }}</span>
      {% else %}
      <input type="hidden" name="contact[tags]" value="newsletter">
      <div class="form-group">
        <label class="">{{'newsletter.label' | t}}</label>
        <input class="form-control" type="email" name="contact[email]" 
               id="Email"
               spellcheck="false"
               autocomplete="off"
               autocapitalize="off"
               placeholder="{{'newsletter.label' | t}}"
               value="{{ form.email }}"
               {% if form.errors %}
               autofocus
               aria-invalid="true"
               aria-describedby="Newsletter-error--{{ section.id }}"
               {% elsif form.posted_successfully? %}
               aria-describedby="Newsletter-success--{{ section.id }}"
               {% endif %}
			   required>
      </div>   
      <button type="submit" name="commit" class="button black-btn btn-block">
        {{'newsletter.button_label' | t}}
      </button>
      {% endif %}
      {% endform %}
      {% endif %}
      {% if section.settings.show_social_share %}
      {% include 'social-media-icons' %}
      {% endif %}

    </div>
  </div>
</div>
<style>

  {% if section.settings.password-bk != blank %}
  {% capture image_size %}1500x{% endcapture %}  
  .template-password{
    background-image: url('{{ section.settings.password-bk | img_url: image_size }}');
      background-position: center;
    background-size: cover;
    background-repeat: no-repeat;
      }              
  {% else %}
  {% endif %}
.passwordInnerArea .social-links ul li:not(:last-child) {
    margin-right: 10px;
}
.passwordInnerArea .social-links ul li {
    width: 34px;
    height: 34px;
    background: #000000;
    text-align: center;
    display: inline-block;
    margin-right: 10px;
    color: #fff;
}
.passwordInnerArea .social-links ul {
    display: flex;
    justify-content: center;
    align-items: center;
    margin-top: 15px;
}
</style>



{% schema %}
{
   "name":"Password page",
   "class":"password-section",
   "templates":[
      "password"
   ],
   "tag":"section",
   "settings":[
      {
         "type":"image_picker",
         "id":"logo_pw",
         "label":"t:sections.password-section.settings.logo_pw.label"
      },
      {
         "type":"image_picker",
         "id":"password-bk",
         "label":"t:sections.password-section.settings.password-bk.label"
      },
      {
         "type":"range",
         "id":"logo_max_width",
         "min":100,
         "max":1180,
         "step":20,
         "unit":"px",
         "label":"t:sections.password-section.settings.logo_max_width.label",
         "default":280
      },
      {
         "type":"text",
         "id":"heading",
         "label":"t:sections.password-section.settings.heading.label",
         "default":"Opening soon"
      },
      {
         "type":"checkbox",
         "id":"show_newsletter",
         "label":"t:sections.password-section.settings.show_newsletter.label",
         "default":true
      },
      {
         "type":"text",
         "id":"newsletter_title",
         "label":"t:sections.password-section.settings.newsletter_title.label",
         "default":"Find out when we open"
      },
      {
         "type":"checkbox",
         "id":"show_social_share",
         "label":"t:sections.password-section.settings.show_social_share.label",
         "default":true
      }
   ]
}
{% endschema %}
