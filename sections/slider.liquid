<div id="product-slider" class="banner-product-slider">
  <div id="slider-{{section.id}}" class=" fade slider-item {% if section.blocks.size > 1 %}slideShow{% endif %}"  {% if section.blocks.size > 1 %}data-slider{% endif %}>
        
      {% for block in section.blocks %}
      {% case block.type %}
        {% when 'slide' %}
      <div id="banner-{{block.id}}" class="banner banner-section item slider-banner slideshow__slide--{{ block.id }}" {{ block.shopify_attributes }}>
      {% render 'banner-slide-content' block:block,animation:animation%}	
      </div>
      {% when 'split' %}
      <div id="banner-{{block.id}}" class="banner-{{block.id}} banner banner-section item split-slider slider-banner slideshow__slide--{{ block.id }}" {{ block.shopify_attributes }}>	
        {% render 'split-slide-content' block:block,animation:animation%}	
      </div>
      {% when 'video' %}
      {% if block.settings.videofile != blank or block.settings.poster != blank %}
      <div id="banner-{{block.id}}" class="banner banner-section item slider-banner slideshow__slide--{{ block.id }}" {{ block.shopify_attributes }}>	
        {% render 'video-slide-content' block:block,animation:animation%}	
      </div>
      {% endif %}						
      {% endcase %}
      {% endfor %}
    </div>
  <script type="application/json" name="slider-json">
         {
          "slidesToShow":1,
          "slidesToScroll":1,
          "infinite":true,
          "margin":0,
            "speed": 1000,
            "fade": true,
            "cssEase": "linear",
         "dots":{{-section.settings.dots-}},
          "autoplay":{{-section.settings.rotate-}},
          "arrows":{{-section.settings.arrows-}},
          "autoplaySpeed":{{-section.settings.rotate_speed | times:1000-}},
          "prevArrow":"<button type=\"button\" class=\"slick-prev\" aria-label=\"Prev\"><span><svg aria-hidden=\"true\" focusable=\"false\" viewBox=\"0 0 24 24\" role=\"img\" width=\"24px\" height=\"24px\" fill=\"none\"><path stroke=\"currentColor\" stroke-width=\"1.5\" d=\"M15.526 18.966L8.559 12l6.967-6.967\"></path></svg></span></button>",
          "nextArrow":"<button type=\"button\" class=\"slick-next\" aria-label=\"Next\"><span><svg aria-hidden=\"true\" focusable=\"false\" viewBox=\"0 0 24 24\" role=\"img\" width=\"24px\" height=\"24px\" fill=\"none\"><path stroke=\"currentColor\" stroke-width=\"1.5\" d=\"M8.474 18.966L15.44 12 8.474 5.033\"></path></svg></span></button>",
          "responsive":[
          	{
            "breakpoint": 768,
                "settings": {
                    "dots":true,
                    "arrows":false,
                    "draggable":true
                  }
            }
          ]
        }
      </script>
  </div>
  <style>
	.slider-item{
		position:relative;
		overflow:hidden;
	}
      .slideShow[data-slider] {
    visibility: hidden;
/*         display: flex; */
}
.slideShow[data-slider].slick-initialized {
    visibility: visible;
}
    #slider-{{section.id}} .slider-banner h1{
    font-size:{{section.settings.heading_font_size}}px;
    }
    #slider-{{section.id}} .slider-banner h2{
    font-size:{{section.settings.subheading_font_size}}px;
    }
</style>

