<section id="product-slider">
	<div class="container-fluid">
		<div class="row">
			<div class="slider-list">
				<div class="d-flex">
					{% if section.blocks.size > 1 %}
				  <div id="slider-{{section.id}}" class="loop owl-carousel owl-theme">
					{% else %}
					<div class="loop owl-carousel owl-theme">
				  {% endif %}
					{% for block in section.blocks %}
					<div class="item">
						{% if block.settings.image != blank %}
					  <img src="{{block.settings.image | img_url:'master'}}" loading="lazy" alt="">
					  {%else%}
					  {% include 'banner-placeholder'%}
						{% endif %}
							<div class="carousel-caption {{block.settings.info_position}}">
							<div class="container">
								<div class="row">
									<div class="carousel-caption-title style2">
										{% if block.settings.heading != blank %}
										<h2 class="top-title">{{block.settings.heading}}</h2>
									{% endif %}
										{% if block.settings.subheading != blank %}
										<h1 class="smaller-heading">{{block.settings.subheading}}</h1>
									{% endif %}
										{% if block.settings.sale != blank %}
										<h1 class="bigger-heading">{{block.settings.sale}}</h1>
									{% endif %}
										{% if block.settings.content != blank %}
										<h5 class="bottom-title">{{block.settings.content}}</h5>
									{% endif %}
										{% if block.settings.btn != blank %}
										<a href="{{block.settings.link}}" class="black-btn button">{{block.settings.btn}}<i class="fas fa-arrow-right"></i></a>
									{% endif %}
									</div>
								</div>
							</div>
						</div>
					</div>
				{% endfor %}
				  </div>
				 </div>
			</div>
		</div>
	</div>
</section>
<script>
jQuery(document).ready(function($) {
	$('#slider-{{section.id}}').owlCarousel({
	 center: false,
	 items: 1,
	 loop: true,
	 margin: 0,
	 dots:false,
	 //autoplay:true,
	 slideSpeed: 4000,
	 autoPlaySpeed: 4000,
	 responsiveClass:true,
	 responsive: {
	   600: {
		 items: 1
	   }
	 }
  });
});
</script>
{% schema %}
{
  "name": "t:sections.main-slider.name",
  "tag": "section",
  "blocks": [
	{
		"type":"slide",
		"name":"t:sections.main-slider.blocks.slide.name",
		"settings": [
			{
				"type": "text",
				"id": "heading",
				"default": "Heading",
				"label": "t:sections.main-slider.blocks.slide.settings.heading.label"
			},
			{
				"type": "text",
				"id": "subheading",
				"default": "Sub Heading",
				"label": "t:sections.main-slider.blocks.slide.settings.subheading.label"
			},
			{
				"type": "text",
				"id": "sale",
				"default": "Sale 40%",
				"label": "t:sections.main-slider.blocks.slide.settings.sale.label"
			},
			{
				"type": "text",
				"id": "content",
				"default": "content",
				"label": "t:sections.main-slider.blocks.slide.settings.content.label"
			},
			{
			  "type": "text",
			  "id": "btn",
			  "default": "Explore Now",
			  "label": "t:sections.main-slider.blocks.slide.settings.btn.label"
			},
			{
			  "type": "url",
			  "id": "link",
			  "label": "t:sections.main-slider.blocks.slide.settings.link.label"
			},
			{
			  "type": "image_picker",
			  "id": "image",
			  "label": "t:sections.main-slider.blocks.slide.settings.image.label"
			},
			{
			  "type": "color",
			  "id": "bgcolor",
			  "label": "t:sections.main-slider.blocks.slide.settings.bgcolor.label"
			},
			{
			  "type": "select",
			  "id": "info_position",
			  "label": "t:sections.main-slider.blocks.slide.settings.info_position.label",
			  "default": "center-left",
			  "options": [
				{
				  "label": "t:sections.main-slider.blocks.slide.settings.info_position.top-left.label",
				  "value": "top-left"
				},
				{
				  "label": "t:sections.main-slider.blocks.slide.settings.info_position.center-left.label",
				  "value": "center-left"
				},
				{
				  "label": "t:sections.main-slider.blocks.slide.settings.info_position.bottom-left.label",
				  "value": "bottom-left"
				},
				{
				  "label": "t:sections.main-slider.blocks.slide.settings.info_position.top-center.label",
				  "value": "top-center"
				},
				{
				  "label": "t:sections.main-slider.blocks.slide.settings.info_position.center.label",
				  "value": "center"
				},
				{
				  "label": "t:sections.main-slider.blocks.slide.settings.info_position.bottom-center.label",
				  "value": "bottom-center"
				},
				{
				  "label": "t:sections.main-slider.blocks.slide.settings.info_position.top-right.label",
				  "value": "top-right"
				},
				{
				  "label": "t:sections.main-slider.blocks.slide.settings.info_position.center-right.label",
				  "value": "center-right"
				},
				{
				  "label": "t:sections.main-slider.blocks.slide.settings.info_position.bottom-right.label",
				  "value": "bottom-right"
				}
			  ]
			}
		]
	}
  ],
  "presets": [
    {
      "name": "t:sections.main-slider.presets.name"
    }
  ]
}
{% endschema %}
