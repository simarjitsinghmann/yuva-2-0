<div class="section-spacer">
  <div class="container">
    <div class="best__for__you shopify__top__section text__center">
      <div class="section-heading-box">
        <small>{{section.settings.heading}}</small>
        <h2>{{section.settings.subheading}} 
          {% if section.settings.view_all_btn and section.settings.collection != blank and section.settings.view_all_btn_text != blank %}
          <a class="view-all corner-view" href="{{section.settings.collection.url}}">{{section.settings.view_all_btn_text}}</a>    
          {% endif %}
        </h2>
      </div>
      {% if section.settings.collection != blank %}
      {% assign collection = section.settings.collection %}
      <div class="grid grid--4-col-desktop grid--3-col-tablet">
        <div class="grid__item full__item products-grid ">
          <div class="row column-{{section.settings.col_size}} d-flex">
            {% assign limit = section.settings.col_size | times : section.settings.row_size%}
            {% for product in collection.products limit:limit%}
            {% include 'product-grid' %}
            {% endfor %}
          </div>
        </div>
      </div>
      {% endif%}
    </div>
  </div>
</div>
{% schema %}
{
  "name": "t:sections.featured-collection.name",
  "tag": "section",
  "class":"latest__sale",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "default": "All Products",
      "label": "t:sections.featured-collection.settings.heading.label"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "default": "See the latest!",
      "label": "t:sections.featured-collection.settings.subheading.label"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "t:sections.featured-collection.settings.collection.label"
    },
    {
        "type": "range",
        "id": "col_size",
        "min": 2,
        "max": 5,
        "step": 1,
        "label": "t:sections.featured-collection.settings.col_size.label",
        "default": 4
    },
    {
        "type": "range",
        "id": "row_size",
        "min": 1,
        "max": 5,
        "step": 1,
        "label": "t:sections.featured-collection.settings.row_size.label",
        "default": 2
    },
    {
      "type": "checkbox",
      "id": "show_second_image",
      "default": false,
      "label": "t:sections.featured-collection.settings.show_second_image.label"
    },
    {
      "type": "checkbox",
      "id": "view_all_btn",
      "default": true,
      "label": "t:sections.featured-collection.settings.view_all_btn.label"
    },
    {
      "type": "text",
      "id": "view_all_btn_text",
      "default": "View all",
      "label": "t:sections.featured-collection.settings.view_all_btn_text.label"
    }
  ],
  "presets": [
    {
      "name": "t:sections.featured-collection.presets.name"
    }
  ]
}
{% endschema %}