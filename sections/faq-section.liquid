{% if section.blocks.size > 0 %}
  <div class="container">
    <div class="row">
      <div class="faq-detail">
        <h5>{{section.settings.heading}}</h5>
        <div class="accordion-container">
          {% for block in section.blocks %}
          {% if block.settings.heading != blank or block.settings.answer != blank%}
          <div class="set">
            <h6 class="panel-title">
              <a href="javascript:void(0)">
                {{block.settings.heading }}
                <i class="fa fa-plus"></i>
              </a>
            </h6>
            <div class="content" style="display:none;">
              <div class="panel-body">
                {{block.settings.answer}}
              </div>
            </div>
          </div>
          {% endif %}
          {% endfor %}
        </div>
      </div>
    </div>
  </div> 
{% endif %}
{% schema %}
  {
    "name": "t:sections.faq-section.name",
	"tag":"section",
	"class":"faq faq-section",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "default": "Frequently Asked Questions",
        "label": "t:sections.faq-section.settings.heading.label"
      }
    ],
	"blocks":[
		{
          "type": "faq",
          "name": "t:sections.faq-section.blocks.name",
			"settings":[
				{
					"type":"text",
					"id":"heading",
          			"label": "t:sections.faq-section.blocks.settings.heading.label"
				},
				{
					"type":"richtext",
					"id":"answer",
          			"label": "t:sections.faq-section.blocks.settings.answer.label"
				}
			]
		}
	],
	"presets":[
		{
			"name":"t:sections.faq-section.presets.name"
		}
	]
  }
{% endschema %}

