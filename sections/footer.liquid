<div class="container">
  <div class="yv-footer-top-box {% unless section.settings.image != blank %}no-footer-logo{% endunless %}">
    <div class="row">
      <div class="col-12 col-sm-12 col-md-6">
    	<div class="row align-items-center">
      {%- assign footlogo = false -%}
      {%- if section.settings.image != blank -%}
      {%- assign footlogo = true -%}
      <div class="col-sm-12 col-md-3 col-lg-3 col-xl-2">
        <div class="yv-footer-logo">
          {%- assign width = section.settings.image_width | append:'px' -%}
          {% render 'lazy-image' image:section.settings.image,class:'Yuva-logo',max_width:width %}
        </div>
      </div>
      {%- endif -%}
      {%- if section.settings.subtext != blank -%}
      <div class="col-sm-12 {% if footlogo %}col-md-9 col-lg-8 col-xl-8{% else %}col-lg-8 col-xl-9{%endif%}">
        <div class="yv-footer-content">
          {{ section.settings.subtext }}
        </div>
      </div>
      {%- endif -%}
    </div>
      </div>
      <div class="col-12 col-sm-12 col-md-6">
      adshadhhghasj
      </div>
    </div>
  </div>
  <div class="yv-footer-middle-box">
    <div class="footer-menu-list">
      <div class="row">
        {%- for block in section.blocks -%}
        {%- case block.type -%}
        {%- when 'link_list'-%}
        <div class="col-sm-12 col-md-4 col-lg-2 col-xl-2" {{ block.shopify_attributes }}>
          <div class="footer-menu-accordion">
            {%- if block.settings.heading != blank -%}
            <h5 class="footer-menu-head footer-menu-accordion-head">{{block.settings.heading}}</h5>
            {%- endif -%}
            {%- if block.settings.menu != blank -%}
            <ul>
              {%- for link in block.settings.menu.links -%}
              <li><a href="{{link.url}}">{{link.title | split: '{'| first }}</a></li>
              {%- endfor -%}
            </ul>
            {%- endif -%}
          </div>
        </div>
        {%- endcase -%}
        {%- endfor -%}
      </div>
    </div>
  </div>
  <div class="yv-footer-bottom-box">
    <div class="row align-items-center">
      <div class="col-12 col-sm-12 col-lg-6 col-xl-7">
        {%- for block in section.blocks -%}
        {%- case block.type -%}
        {%- when 'newsletter'-%}
        <div class="yv-newsletter-outerbox">
          <div class="yv-newsletter-text">
            <h4 class="white-text">Enter the fold</h4>
            <span>Subscribe to our newsletter</span>
          </div>
        <div class="yv-footer-newsletter-box">
          {%- if block.settings.show_newsletter -%}
          {%- form 'customer', id: 'ContactFooter',class:'yv-footer-newsletter-form newsletter-form' -%}
          <input type="hidden" name="contact[tags]" value="newsletter">
          {%- if form.posted_successfully? -%}
          <span class="success-text">{{ 'newsletter.success' | t }}</span>
          {%- else -%}
          <div class="yv-footer-newsletter-wrapper">
            <input id="NewsletterForm--footer" 
                   type="email" 
                   name="contact[email]" 
                   class="form-control" 
                   value="{{ form.email }}" 
                   aria-required="true"
                   autocorrect="off" 
                   autocapitalize="none"
                   autocomplete="email" 
                   {% if form.errors %}
                   autofocus
                   aria-invalid="true"
                   aria-describedby="Newsletter-error--{{ section.id }}"
                   {% elsif form.posted_successfully? %}
                   aria-describedby="Newsletter-success--{{ section.id }}"
                   {% endif %}
                   placeholder="{{block.settings.placeholder}}" 
                   required>                
            {%- if form.errors -%}
            <span class="newsletter-form__message form__message error-text" id="Newsletter-error--{{ section.id }}">{{ form.errors.translated_fields['email'] | capitalize }} {{ form.errors.messages['email'] }}</span>
            {%- endif -%}
            <button type="submit" class="button--secondary newsletter-form__button" name="commit">
              Subscribe
            </button>
          </div>
          {%- endif -%}
          {%- endform -%}
          {%- endif -%}
        </div>
        </div>
        {%- endcase -%}
        {%- endfor -%}
      </div>
      <div class="col-12 col-sm-12 col-lg-6 col-xl-5">
        <div class="yv-footer-payment-box">
          {%- if section.settings.payment_enable -%}
          <div class="footer-payment">
            <ul class="list list-payment" role="list">
              {%- for type in shop.enabled_payment_types -%}
              <li class="list-payment__item">
                {{ type | payment_type_svg_tag: class: 'icon' }}
              </li>
              {%- endfor -%}
            </ul>
          </div>
          {%- endif -%}
          {%- if section.settings.enable_language_selector -%}
          {%- include 'language' -%}
          {%- endif -%}
        </div>
      </div>
    </div>
  </div>
  <div class="yv-footer-copyright-box">
    {%- if section.settings.copyright_content -%}
      <p class="yv-copyright-content">{{section.settings.copyright_content}}</p>
    {%- endif -%}
  </div>
</div>
<style>
  #shopify-section-{{section.id}}{
    background-color:{{section.settings.footer_bg }};
  }

  #shopify-section-{{section.id}} a,
  #shopify-section-{{section.id}} label,
  #shopify-section-{{section.id}} p{
    color:{{section.settings.footer_text}};
  }
  #shopify-section-{{section.id}} a:hover{
    color:{{section.settings.footer_text_hover}};
  }
  #shopify-section-{{section.id}} ul li a:before {
    background-color:{{section.settings.footer_text_hover}};
  }
</style>
