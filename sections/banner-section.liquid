<div id="banner-{{section.id}}">
  <div class="item">
    {% if section.settings.image != blank %}
    <img src="{{section.settings.image | img_url:'master'}}" alt="">
    {%else%}
    {% include 'banner-placeholder'%}
    {% endif %} 
    <div class="banner-caption ">
      <div class="container">
        	<div class="banner-caption-outer">
          <div class="banner-caption-title banner-slide {{section.settings.info_position}} text__{{section.settings.info_alignment}}">
            {% if section.settings.tag_line != blank %}
            <h6>{{section.settings.tag_line}}</h6>
            {% endif %}
            {% if section.settings.heading != blank %}
            <h2>{{section.settings.heading}}</h2>
            {% endif %}
            {% if section.settings.content != blank %}
            <p>{{section.settings.content}}</p>
            {% endif %}
            {% if section.settings.btn != blank and section.settings.link != blank %}
            <a href="{{section.settings.link}}" class="black-btn button">{{section.settings.btn}}<i class="fas fa-arrow-right"></i></a>
            {% endif %}
          </div>
        </div>
    </div>
    </div>
  </div>
</div>
<style>              
    #banner-{{section.id}} .banner-caption-title h6 { 
    {% if section.settings.sh_bg != blank %}
    background: {{ section.settings.sh_bg }};
    {% endif %}
    {% if section.settings.sh_text != blank %}
    color: {{ section.settings.sh_text }};
    {% endif %}
  }               
  #banner-{{section.id}} .banner-caption-title h2 { 
    {% if section.settings.h_text != blank %}
    color: {{ section.settings.h_text }};
    {% endif %}
  }          
  #banner-{{section.id}} .banner-caption-title p { 
    {% if section.settings.c_text != blank %}
    color: {{ section.settings.c_text }};
    {% endif %}
  }        
  #banner-{{section.id}} .banner-caption-title a.button { 
    {% if section.settings.btn_text != blank %}
    color: {{ section.settings.btn_text }};
    {% endif %}
    background-color:{{ section.settings.btn_bg }} ;
  }

  #banner-{{section.id}} .banner-caption-title a.button:hover { 
    {% if section.settings.btn_h_text != blank %}
    color: {{ section.settings.btn_h_text }};
    {% endif %}
     background-color:{{ section.settings.btn_h_bg }}
  }
</style>
