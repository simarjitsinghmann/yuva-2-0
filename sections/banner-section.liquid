<div id="banner-{{section.id}}">
                    <div class="item">
                        {% if section.settings.image != blank %}
                        <img src="{{section.settings.image | img_url:'master'}}" alt="">
                        {%else%}
                        {% include 'banner-placeholder'%}
                        {% endif %} 
                        <div class="banner-caption">
                            <div class="container">
                                <div class="row">
                                    <div class="banner-caption-title style2 {{section.settings.info_position}} text__{{section.settings.info_alignment}}">
                                        {% if section.settings.heading != blank %}
                                        <h6 class="top-title">{{section.settings.heading}}</h6>
                                        {% endif %}
                                        {% if section.settings.subheading != blank %}
                                        <h2 class="smaller-heading">{{section.settings.subheading}}</h2>
                                        {% endif %}
                                        {% if section.settings.sale != blank %}
                                        <h2 class="bigger-heading">{{section.settings.sale}}</h2>
                                        {% endif %}
                                        {% if section.settings.content != blank %}
                                        <h6 class="bottom-title">{{section.settings.content}}</h6>
                                        {% endif %}
                                        {% if section.settings.btn != blank %}
                                        <a href="{{section.settings.link}}" class="black-btn button">{{section.settings.btn}}<i class="fas fa-arrow-right"></i></a>
                                        {% endif %}
                                    </div>
                                </div>
                            </div>
                        </div>
                  </div>
    </div>

      <style>              
        #banner-{{section.id}} .banner-caption-title .top-title { 
            {% if section.settings.h_bg != blank %}
                background: {{ section.settings.h_bg }};
            {% endif %}
            {% if section.settings.h_text != blank %}
                color: {{ section.settings.h_text }};
            {% endif %}
        }             
        #banner-{{section.id}} .banner-caption-title .smaller-heading { 
            {% if section.settings.sh_bg != blank %}
                background: {{ section.settings.sh_bg }};
            {% endif %}
            {% if section.settings.sh_text != blank %}
                color: {{ section.settings.sh_text }};
            {% endif %}
        }               
        #banner-{{section.id}} .banner-caption-title .bigger-heading { 
            {% if section.settings.sale_bg != blank %}
                background: {{ section.settings.sale_bg }};
            {% endif %}
            {% if section.settings.sale_text != blank %}
                color: {{ section.settings.sale_text }};
            {% endif %}
        }          
        #banner-{{section.id}} .banner-caption-title .bottom-title { 
            {% if section.settings.c_bg != blank %}
                background: {{ section.settings.c_bg }};
            {% endif %}
            {% if section.settings.c_text != blank %}
                color: {{ section.settings.c_text }};
            {% endif %}
        }        
        #banner-{{section.id}} .banner-caption-title a.button { 
            {% if section.settings.btn_text != blank %}
                color: {{ section.settings.btn_text }};
            {% endif %}
            background-image: linear-gradient(
                90deg,{{ section.settings.btn_h_bg }} 0,{{ section.settings.btn_h_bg }} 50%,{{ section.settings.btn_bg }} 50%,{{ section.settings.btn_bg }} 100%);
        }
               
        #banner-{{section.id}} .banner-caption-title a.button:hover { 
            {% if section.settings.btn_h_text != blank %}
                color: {{ section.settings.btn_h_text }};
            {% endif %}
        }
    </style>
