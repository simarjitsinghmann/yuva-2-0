<div class="section-spacer">
  <div class="container"> 
    <div class="shopify__top__section text__center">
      <div class="section-heading-box">
        <small>{{section.settings.heading}}</small>
        <h2>{{section.settings.subheading}} 
          {% if section.settings.button != blank and section.settings.link != blank %}
          <a class="view-all corner-view" href="{{section.settings.link}}">{{section.settings.button}}</a></h2>
        {% endif %}
      </div>
      {% if section.blocks.size > 0  %}
      <div class="blog-multi-slide desktop" role="list">  
        <div class="">
          <div id="featuredBlog-{{section.id}}" class="blog__post grid grid--1-col grid--2-col-tablet grid--3-col-desktop">         
            {% for block in section.blocks %}  
            {% if block.settings.article != blank %}  
            {% assign article = block.settings.article %}
            {% include 'featured-article-grid' %}
            {% else %}
            <div class="item grid__item style1">
              <div class="post-wrapper">
                <div class="post-information">
                  {% assign article_image = 'featured_image.png' | asset_url %}                
                  <div class="post-information-image">
                    <img src="{{article_image}}" alt="">
                  </div>
                  <div class="post-information__wrapper text__left">
                    <div class="post-date">
                      <h4 class="custom-title">12  Oct 2021 </h4>
                    </div>
                    <div class="post-name">
                      <h6><a href="">Article Title</a></h6>
                      <p>Loream ipsum Loream ipsum Loream ipsum</p>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            {% endif %}
            {% endfor %}
          </div>
        </div>
      </div>
      
      <div class="blog-multi-slide mobile" role="list">  
        <div class="">
          <div id="featuredBlog-{{section.id}}-mobile" class="blog__post grid grid--1-col grid--2-col-tablet grid--3-col-desktop">         
            {% for block in section.blocks %}  
            {% if block.settings.article != blank %}  
            {% assign article = block.settings.article %}
            {% include 'featured-article-grid' %}
            {% else %}
            <div class="item grid__item style1">
              <div class="post-wrapper">
                <div class="post-information">
                  {% assign article_image = 'featured_image.png' | asset_url %}                
                  <div class="post-information-image">
                    <img src="{{article_image}}" alt="">
                  </div>
                  <div class="post-information__wrapper text__left">
                    <div class="post-date">
                      <h4 class="custom-title">12  Oct 2021 </h4>
                    </div>
                    <div class="post-name">
                      <h6><a href="">Article Title</a></h6>
                      <p>Loream ipsum Loream ipsum Loream ipsum</p>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            {% endif %}
            {% endfor %}
          </div>
        </div>
      </div>
      {% endif %}
    </div>
  </div>
</div>
<style>
  #shopify-section-{{section.id}}{
    background-color:{{section.settings.color}};
    padding-top:{{section.settings.top_space_desktop}}px;
    padding-bottom:{{section.settings.bottom_space_desktop}}px;
  }
  @media only screen and (max-width:575px) {
    #shopify-section-{{section.id}}{
      padding-top:{{section.settings.top_space_mobile}}px;
      padding-bottom:{{section.settings.bottom_space_mobile}}px;
    }
  }
</style>
{% schema %}
{
    "name": "t:sections.featured-article.name",
    "tag": "section",
    "class":"blog-post featured-articles-section",
    "max_blocks":3,
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "default": "CONSECTETUR",
        "label": "t:sections.featured-article.settings.heading.label"
      },
      {
        "type": "textarea",
        "id": "subheading",
        "default": "Blog post everyday",
        "label": "t:sections.featured-article.settings.subheading.label"
      },
      {
        "type": "text",
        "id": "button",
        "default": "View all",
        "label": "t:sections.featured-article.settings.button.label"
      },
      {
        "type": "url",
        "id": "link",
        "label": "t:sections.featured-article.settings.link.label"
      },
      {
        "type": "color",
        "id": "color",
        "label": "t:sections.featured-article.settings.color.label",
        "default":"#ffffff"
      },
      {
        "type": "range",
        "id": "top_space_desktop",
        "label": "t:sections.featured-article.settings.top_space_desktop.label",
        "default":30,
        "min":0,
        "max":60,
        "step":5
      },
      {
        "type": "range",
        "id": "bottom_space_desktop",
        "label": "t:sections.featured-article.settings.bottom_space_desktop.label",
        "default":30,
        "min":0,
        "max":60,
        "step":5
      },
      {
        "type": "range",
        "id": "top_space_mobile",
        "label": "t:sections.featured-article.settings.top_space_mobile.label",
        "default":30,
        "min":0,
        "max":60,
        "step":5
      },
      {
        "type": "range",
        "id": "bottom_space_mobile",
        "label": "t:sections.featured-article.settings.bottom_space_mobile.label",
        "default":30,
        "min":0,
        "max":60,
        "step":5
      }
    ],
    "blocks":[
      {
        "type":"article",
         "name":"t:sections.featured-article.blocks.article.name",
         "settings":[
          {
          "type":"article",
          "id":"article",
          "label": "t:sections.featured-article.blocks.article.settings.article.label"
          }
           ]
       }
         ],
    "presets": [
      {
        "name": "t:sections.featured-article.presets.name",
        "category": "Article",
        "blocks": [
          {
            "type": "article"
          },
          {
            "type": "article"
          },
          {
            "type": "article"
          }
        ]
      }
    ]
  }
  {% endschema %}