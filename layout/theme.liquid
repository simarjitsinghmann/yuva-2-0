<!doctype html>

<html class="no-js" lang="{{ request.locale.iso_code }}">

  <head>

    <meta charset="utf-8">

    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    
    <meta name="viewport" content="width=device-width,initial-scale=1">

    <meta name="theme-color" content="">

    <link rel="canonical" href="{{ canonical_url }}">

    <link rel="preconnect" href="https://cdn.shopify.com" crossorigin>

    {%- if settings.favicon != blank -%}

      <link rel="icon" type="image/png" href="{{ settings.favicon | img_url: '32x32' }}">

    {%- endif -%}

    {%- unless settings.type_header_font.system? and settings.type_body_font.system? -%}

      <link rel="preconnect" href="https://fonts.shopifycdn.com" crossorigin>

    {%- endunless -%}

    <title>{{ page_title }}</title>

    {% if page_description %}

      <meta name="description" content="{{ page_description | escape }}">

    {% endif %}

    {% render 'meta-tags' %}
    <script>
      var moneyFormat = '{{shop.money_format}}';
    </script>
    <link href="https://use.fontawesome.com/releases/v5.0.1/css/all.css" rel="stylesheet">

    {{ 'base.css' | asset_url | stylesheet_tag }}

    {{ 'common.css' | asset_url | stylesheet_tag }}

    {{ 'header.css' | asset_url | stylesheet_tag }}
    
    {{ 'footer.css' | asset_url | stylesheet_tag }}

    {{ 'style.css' | asset_url | stylesheet_tag }}
    
    {{ 'variable.css' | asset_url | stylesheet_tag }}

    {{ 'element.css' | asset_url | stylesheet_tag }}

    {{ 'owl.carousel.min.css' | asset_url | stylesheet_tag }}

    {{ 'owl.theme.default.min.css' | asset_url | stylesheet_tag }}

    {{ 'fonts.css' | asset_url | stylesheet_tag }}
    
    {{ 'style-responsive.css' | asset_url | stylesheet_tag }}
<link
    rel="stylesheet"
    href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css"
  />
    {{ content_for_header }}

    {%- liquid
      assign body_font_bold = settings.type_body_font | font_modify: 'weight', 'bold'
      assign body_font_italic = settings.type_body_font | font_modify: 'style', 'italic'
      assign body_font_bold_italic = body_font_bold | font_modify: 'style', 'italic'
    %}

    <script>document.documentElement.className = document.documentElement.className.replace('no-js', 'js');</script>

    <script src="{{'vendor.js' | asset_url}}" ></script> 
    <script src="{{'owl.carousel.js' | asset_url}}"></script> 
    <script src="{{'instafeed.min.js' | asset_url}}"></script> 

    <script src="{{'common.js' | asset_url}}" defer="defer"></script> 
<link rel="stylesheet" type="text/css" href="//cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.css"/>

<script type="text/javascript" src="//cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.min.js"></script>

  </head>

  <body class="template_{{ template }}">
    <div class="wrapper">   

      <header id="headerSection">

          {% section 'announcement-bar' %}
          {% section 'header' %}      

      </header>
      {% include 'breadcrumb' %}      

      <main id="MainContent" class="content-for-layout focus-none" role="main" tabindex="-1">

        {{ content_for_layout }}

      </main>
		{% unless request.path contains 'challenge' %}
      {% section 'footer' %}
      {% endunless %}

      {% if settings.search_style == 'full' %}
      {% include 'search-drawer' %}
      {% endif %}
      {% render 'similar-products'%}

      {% if shop.customer_accounts_enabled %} 

        {% include 'account-drawer' %}

      {% endif %}

      <ul hidden>

        <li id="a11y-refresh-page-message">{{ 'accessibility.refresh_page' | t }}</li>

      </ul>

      <div class="wrapper-overlay" style="display: none;"></div>

    </div>
    {% render 'newsletter-popup'%}
  
  {% include 'product-quick-view' %}
    {% if settings.enable_cart_drawer and template != 'cart'%}
  {% include 'mini-cart' %}
    {% endif %}
    <style>
      form button[type="submit"]:not([name="checkout"]) {
        position: relative;
      }
      form button[type="submit"].is-loading svg, form button[type="submit"].is-loading span {
        display: none;
      }
      form button[type="submit"].is-loading svg.svg-loader {
        display: block !important;
        margin: auto !important;
        margin-top: 0;
        width:34px;height:34px;
      }
      
      .br_more_filter.hide .showLess {
    display: none;
}
      .br_more_filter.show .showMore {
    display: none;
}
      .accordion-container .set .panel-title.active .iconPlus,
      .accordion-container .set .panel-title .iconMinus{
    display: none;
}
       .accordion-container .set .panel-title .iconPlus,
      .accordion-container .set .panel-title.active .iconMinus{
    display: block;
}
    </style>
  </body>

</html>
