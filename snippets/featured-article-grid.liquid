<div class="col-12 col-sm-12 {{mainclasses}}">
  <div class="yv-blog-card">
    {%- assign article_image = 'featured_image.png' | asset_url -%}
    {%- if article.image -%}
    {%- assign article_image = article.image -%}
    {%- endif -%}
    <div class="yv-blog-card-img post-information-image">
      <a href="{{-article.url-}}" class="animate_hvrbr">                    
        {%- if article.image != blank -%}
        {%- include 'lazy-image' image:article_image -%}
        {%- else -%}
        {%- render 'placeholder' %}
                  {%- endif -%}
      </a>
    </div>
    <div class="post-information__wrapper text__left">
      <div class="post-date">
        <span class="custom-title">{{article.published_at | date: "%d" }} {{article.published_at | date: " %b %Y" }} </span>
      </div>
      <div class="post-name">
        <h6><a href="{{article.url}}">{{article.title| truncatewords: 6}}</a></h6>
        {%- assign word_limit = 6 -%}
        {%- if desc_limit -%}{%- assign word_limit = desc_limit -%}{%- endif -%}
      </div>
    </div>
  </div>
</div>