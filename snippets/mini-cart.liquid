<script src="{{'cart-ajax.js' | asset_url}}" defer="defer"></script> 
<div id="mini__cart" class="mini_cart">  
</div>
<script id="CartTemplate" type="text/template">
    {% raw %}
	<div class="cart-product-title">
		<a href="javascript:void(0)" title="translation missing: en.cart.general.close_cart" class="close-customer close" aria-describedby="a11y-external-message">
			<svg aria-hidden="true" focusable="false" role="presentation" class="icon icon-close" viewBox="0 0 40 40"><path d="M23.868 20.015L39.117 4.78c1.11-1.108 1.11-2.77 0-3.877-1.109-1.108-2.773-1.108-3.882 0L19.986 16.137 4.737.904C3.628-.204 1.965-.204.856.904c-1.11 1.108-1.11 2.77 0 3.877l15.249 15.234L.855 35.248c-1.108 1.108-1.108 2.77 0 3.877.555.554 1.248.831 1.942.831s1.386-.277 1.94-.83l15.25-15.234 15.248 15.233c.555.554 1.248.831 1.941.831s1.387-.277 1.941-.83c1.11-1.109 1.11-2.77 0-3.878L23.868 20.015z" class="layer"></path></svg>
		</a>
		<h5>
			<!--{{count}} item in your cart-->
			Cart
		</h5>
        
	</div>
     <form action=" {% endraw %}{{ routes.cart_url }} {% raw %}" class="cart__contents critical-hidden" method="post" id="cart" cart-form>
	<div class="cart-item-container">		
		{{#items}}
		<div class="media-link" data-line="{{line}}">
			<img src="{{img}}" alt="Sports Shoes Footwear Fashion" width="65" height="73">
			<div class="media-body">
				<h5 class="cart-item-link">
					<a href="{{url}}">{{name}}</a>
				</h5>
				<h6 class="product__price">{{{linePrice}}}</h6>
				<div class="right-media-cart">
					<div class="quantity">
						<input type="number" class="ajaxcart__qty-num" name="updates[]" min="1" max="9" step="1" value="{{itemQty}}" data-id="{{key}}" data-line="{{line}}">
						<div class="quantity-nav">
							<div class="quantity-button quantity-up ajaxcart__qty--plus"  data-id="{{key}}" data-line="{{line}}" data-qty="{{itemAdd}}"><svg version="1.1" id="Layer_1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" x="0px" y="0px" viewBox="0 0 102 99" style="enable-background:new 0 0 102 99;" xml:space="preserve"><polygon points="100.1,37.2 63.5,37.2 63.5,0.5 39.1,0.5 39.1,37.2 2.4,37.2 2.4,61.6 39.1,61.6 39.1,98.3 63.5,98.3 63.5,61.6 100.1,61.6 "></polygon></svg></div>
							<div class="quantity-button quantity-down ajaxcart__qty--minus" data-id="{{key}}" data-line="{{line}}" data-qty="{{itemMinus}}"><svg version="1.1" id="Layer_1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" x="0px" y="0px" viewBox="0 0 102 99" style="enable-background:new 0 0 102 99;" xml:space="preserve"><polyline points="63.3,61.6 102,61.6 102,37.2 63.3,37.2 "></polyline><polyline points="78.7,37.2 0.1,37.2 0.1,61.6 78.7,61.6 "></polyline></svg></div>
						</div>
					</div>
					<div class="sd_mini_removeproduct" line="{{line}}" >Remove</div>
				</div>
			</div>
			
		</div>
		{{/items}}	
	</div>
	<div class="bottom-cart-box">
		<div class="leave-order-note">
			<span>Leave a Note with Order</span>
				<textarea class="form-control" rows = "3" name="note">{{{note}}}</textarea>
		</div>
		<ul>
			<li class="totle-title">Subtotal</li>
			<li class="totle-price">{{{totalPrice}}}</li>
		</ul>
		<p class="bottom-p">Shipping & taxes calculated at checkout</p>
		<div class="cart-btn-container">
			<a href="/cart" class="view-cart-btn button black-btn">View Cart</a>
			<input type="submit" class="checkout-btn button black-btn" value="Checkout" name="checkout"/>
		</div>
			<a class="shopping_cont" href="#">Continue Shopping</a>
		</div>
	</div>
    </form>
{% endraw %}
</script>