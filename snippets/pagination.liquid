{% comment %}
    Renders a pagination bar

    Accepts:
    - paginate: {Object} Paginate Liquid object (required)

    Usage:
    {% include 'pagination', paginate: paginate %}
{% endcomment %}
<ul class="list--inline pagination">
  {% unless paginate.previous.is_link %}
    <li aria-hidden="true">
      <button class="btn btn--tertiary btn--narrow" disabled>
        <span class="icon__fallback-text">{% render 'icon-left-arrow'%}</span>
      </button>
    </li>
    {% else %}
    <li>
      <a href="{{ paginate.previous.url }}" class="btn btn--tertiary btn--narrow">
        <span class="icon__fallback-text">{% render 'icon-left-arrow'%}</span>
      </a>
    </li>
  {% endunless %}
  {% for part in paginate.parts %}
  {% if part.is_link %}
  <span class="page"><a href="{{part.url}}" title="">{{part.title}}</a></span> 
  <li>
      <a href="{{ part.url }}" class="btn btn--tertiary btn--narrow">
        <span class="icon__fallback-text">{{part.title}}</span>
      </a>
    </li>
  {%- else -%}
  {%- if part.title == paginate.current_page -%}
  
  <li class="pagination__text">
    {{ part.title }}</li> 
  {%- else -%}
  <span class="page">{{ part.title }}</span> 
  {%- endif -%}
  {% endif %}
  {%endfor%}
  {% unless paginate.next.is_link %}
    <li aria-hidden="true">
      <button class="btn btn--tertiary btn--narrow" disabled>
        <span class="icon__fallback-text">
          {% render 'icon-right-arrow'%}
        </span>
      </button>
    </li>
  {% else %}
    <li>
      <a href="{{ paginate.next.url }}" class="btn btn--tertiary btn--narrow">
        <span class="icon__fallback-text">{% render 'icon-right-arrow'%}</span>
      </a>
    </li>
  {% endunless %}
</ul>
