{% comment %}
Renders a pagination bar

Accepts:
- paginate: {Object} Paginate Liquid object (required)

Usage:
{% include 'pagination', paginate: paginate %}
{% endcomment %}
<ul class="list--inline pagination">
  {% if paginate.previous.is_link %}
  <li>
    <a href="{{ paginate.previous.url }}{{ anchor }}" class="btn btn--tertiary btn--narrow" aria-label="{{'general.pagination.previous' | t}}">
      <span class="icon__fallback-text">{% render 'icon-left-arrow'%}</span>
    </a>
  </li>
  {% endif %}
  {% for part in paginate.parts %}
  {% if part.is_link %}
  <li>
    <a href="{{ part.url }}{{ anchor }}" class="btn btn--tertiary btn--narrow" aria-label="{{'general.pagination.page' | t: number:part.title}}">
      <span class="icon__fallback-text">{{part.title}}</span>
    </a>
  </li>
  {%- else -%}
  {%- if part.title == paginate.current_page -%}

  <li class="pagination__text">
    {{ part.title }}</li> 
  {%- else -%}  
  <li class="pagination__text">
    {{ part.title }}</li> 
  {%- endif -%}
  {% endif %}
  {%endfor%}
  {% if paginate.next.is_link %}
  <li>
    <a href="{{ paginate.next.url }}{{ anchor }}" class="btn btn--tertiary btn--narrow" aria-label="{{'general.pagination.next' | t}}">
      <span class="icon__fallback-text">{% render 'icon-right-arrow'%}</span>
    </a>
  </li>
  {% endif %}
</ul>
