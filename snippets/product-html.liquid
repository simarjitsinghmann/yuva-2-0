<!-- Recent Products section start -->
<section class="shopify-section recent-product-section">
  <div class="container">
    <div class="section-heading between-heading">
      <h3>Recent Products</h3>
    </div>
    <div class="yv-recent-product-grid" data-slider>
    <div class="yv-product-card">
              <div class="yv-product-card-img has-multiimage ">
                <a class="yv-product-img" href="#">
                  <img src="//cdn.shopify.com/s/files/1/0597/9668/5009/products/watch.png?v=1644838541" alt="product image" />
                  <img class="product-second-img" src="//cdn.shopify.com/s/files/1/0597/9668/5009/products/watch.png?v=1644838541" alt="product image" />
                </a>
                <ul class="yv-product-options">
                  <li>
                    <a href="#">
                      <img src="https://cdn.shopify.com/s/files/1/0597/9668/5009/files/cart.png?v=1645011498" alt="cart icon" />
                    </a>
                  </li>
                  <li>
                    <a href="#">
                      <img src="https://cdn.shopify.com/s/files/1/0597/9668/5009/files/cart.png?v=1645011498" alt="cart icon" />
                    </a>
                  </li>
                </ul>      
                <div class="similar_options" data-url="{{product.url}}">
                  <span class="vs-icon text-{{settings.show_similar_text}}">
                    {%- render 'similar-product-icon' -%}
                    <span class="similar-text">{{'products.product.similar_products' | t}}</span>
                  </span>
                </div>
                <div class="yv-product-badge sold-badge">
                  Sold Out
                </div> 
              </div>
              <div class="yv-product-information">
                <div class="ratingbox" {{ block.shopify_attributes }}>
                  <span class="shopify-product-reviews-badge"></span>
                </div>
                <a href="#" class="yv-product-title" title="">Full Sleeve Solid Women</a>
                <div class="yv-prizebox">
                  <span class="yv-product-price">$1,100.00</span>
                  <span class="yv-product-compare-price"> $1,190.00</span>
                  <span class="yv-product-percent-off"> 50% Off</span>
                </div>
              </div>
            </div> 
    </div>
  </div>
</section>
<!-- Recent Products section end -->