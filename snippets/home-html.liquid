<!-- collection products slider section start -->
<section class="shopify-section ">
    <div class="container">
      <div class="section-heading between-heading">
        <h2>{{section.settings.subheading}} </h2>
        <ul class="yv-tabs align-end">
          <li class="yv-tab-item active"><a href="javascript:void(0)" class="yv-tab-link">For Everday</a></li>
          <li class="yv-tab-item"><a href="javascript:void(0)" class="yv-tab-link">For Lounge</a></li>
        </ul>
      </div>
      <div class="yv-tabs-wrapper">
        <div class="yv-tab-content">
          <div class="yv-tab-pane">
            <div class="yv-featured-product-grid">
              <div class="row">
                {%- assign limit = section.settings.col_size | times : section.settings.row_size  -%}
                {%- if section.settings.collection != blank -%}
                {%- assign collection = section.settings.collection -%}
                {%- for product in collection.products limit:limit -%}
                {%- include 'product-grid-custom' -%}
                {%- endfor -%}
                {%- else -%}

                {%- for i in (1..limit) -%}
                <div class="col-12 col-sm-6 col-md-4 col-lg-3">
                  <div class="yv-product-card-wrapper">
                    <div class="card-wrapper-img ">
                      {%- capture current -%}{% cycle 1, 2, 3, 4, 5, 6 %}{%- endcapture -%}
                      {{ 'product-' | append: current | placeholder_svg_tag: 'placeholder-svg' }}
                    </div>
                    <div class="product-information">
                      <div class="caption-with-letter-spacing light">{{ 'onboarding.product_title' | t | capitalize }}</div>
                      <div class="price__regular">
                        <span data-regular-price>{{ 1999 | money}}</span>
                      </div>
                    </div>
                  </div>
                </div>
                {%- endfor -%}
                {%- endif -%}
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
</section>
<!-- collection products slider section end -->