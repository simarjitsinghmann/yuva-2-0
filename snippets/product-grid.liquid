        {% endif %}
        </div>
        <div class="product-information">
            <div class="product-information__wrapper">
                <a href="{{product.url}}"><div class="caption-with-letter-spacing light">{{product.title}}</div></a>
                <div class="price">
                    <div class="price__regular">
                        <span class="price-item price-item--regular">
                            {{current_variant.price | money}}
                        </span>
                    </div>
                </div>
                {% for option in product.options_with_values%}
                {% assign opName = option.name | downcase %}
                {% assign opIndex = forloop.index%}
                {% if opName == 'color' or opName == 'colour'%}
                    <div class="product-variants-wrapper">
                    <div class="prd-variants">
                        <div class="prd--option1">
                            <ul class="product-loop-variants variants circle _small list-unstyled">
                                {% for value in option.values%}
                                <li class="color_option">
                                    <input type="radio" name="option-{{opIndex}}" value="{{value}}">
                                    <span class="option" style="background-color:{{value}};">{{value}}</span>
                                </li>
                            {% endfor %}
                            </ul>
                        </div>
                    </div>
                </div>
            {% endif %}
            {% endfor %}
            </div>
            
        </div>
        </div>
    </div>
</div>