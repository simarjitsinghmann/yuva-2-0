{% if block.settings.height != 'use_image' %}
  <style>
    @media only screen and (max-width: 480px){
      [data-block-id="{{ block.id }}"] video{
      width: auto !important;
      height: 100% !important;
    }
    }
  </style>
  {% endif %}

  <div class="block--image fade-in-child preventOverflow home-video-sec {{ block.settings.height }} {{ block.settings.color }}" data-block-id="{{ block.id }}" data-block-type="hero" data-overlay-header>

    <video autoplay loop muted playsinline width="100%" height="750px" poster="{{block.settings.poster | img_url:'master'}}">
      <source src="{{ block.settings.videofile }}" type="video/mp4" id="{{ block.id }}">
    </video> 
    <div class="videoOverlay"></div>
    <div class="container">
    
    {% unless block.settings.link_text == blank and block.settings.title == blank and block.settings.description == blank %}
    {% if block.settings.link_text == '' and block.settings.link  %}
    <a href="{{ block.settings.link }}">
      {% endif %}

      <div class="flex-absolute {{ block.settings.text_position }} {{ block.settings.text_align }}">
        <div class="wrapper preventOverflowContent">
          {% unless block.settings.title == '' %}
          <h1 class="title--overlay h2">{{ block.settings.title | escape }}</h1>
          {% endunless %}
          {% unless block.settings.description == '' %}
          <p class="content--overlay h5--body">{{ block.settings.description }}</p>
          {% endunless %}
          {% unless block.settings.link_text == '' %}
          <a class="{{ block.settings.button_style }} cta--overlay btn--large uppercase black-btn button" href="{{ block.settings.link }}">{{ block.settings.link_text | escape }}</a>
          {% endunless %}
        </div>
      </div>

      {% if block.settings.link_text == '' and block.settings.link %}
    </a>
    {% endif %}
    {% endunless %}
  </div>
  </div>
  <style>
    {% if block.settings.overlay %}
    .home-video-sec .videoOverlay {
      position: absolute;
      top: 0; 
      left: 0;
      right: 0;
      bottom: 0;
      height: 100%;
      background: {{block.settings.bgcolor}};
      opacity:{{block.settings.opacity}}%;
    }
    {% endif %}
  </style>