<div class="nodatafound_wrapper">
  <div class="nodatafound_box">
    <img src="https://cdn.shopify.com/s/files/1/0597/9668/5009/files/not-found3.png?v=1638599796" alt=""/>
    {% if template == 'search' %}    
    <h4>{{ 'templates.search.no_results' | t: terms: search.terms }}</h4>    
    <p>{{ 'templates.search.no_results_sub' | t }}</p>
    {% else %}
    <h3>No {{item}} Found</h3>
    {% endif %}
  </div>
</div>